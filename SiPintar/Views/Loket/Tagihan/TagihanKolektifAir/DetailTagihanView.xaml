                                    </Grid>
                                    <Grid x:Name="BiayaPemakaian" Margin="0,3,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Harga Air" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Foreground="{StaticResource SecondaryDarker}"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedTagihan.BiayaPemakaian, StringFormat='{}{0:#,0}', ConverterCulture='id-ID'}"
                                            TextWrapping="Wrap" />
                                    </Grid>
                                    <Grid x:Name="Administrasi" Margin="0,3,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Administrasi" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Foreground="{StaticResource SecondaryDarker}"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedTagihan.Administrasi, StringFormat='{}{0:#,0}', ConverterCulture='id-ID'}"
                                            TextWrapping="Wrap" />
                                        <TextBlock
                                            Grid.Column="2"
                                            Foreground="{StaticResource SecondaryDarker}"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedTagihan.AdministrasiLain, StringFormat='{}{0:#,0}', ConverterCulture='id-ID'}"
                                            TextWrapping="Wrap" />
                                    </Grid>
                                    <Grid x:Name="Pemeliharaan" Margin="0,3,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Pemeliharaan" />
                                        <TextBlock
                                            Grid.Column="1"
