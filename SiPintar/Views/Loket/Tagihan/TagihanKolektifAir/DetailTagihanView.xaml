                                            TextWrapping="Wrap" />
                                    </Grid>
                                    <Grid x:Name="Pakai" Margin="0,3,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Pakai (M3)" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Foreground="{StaticResource SecondaryDarker}"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedTagihan.Pakai, StringFormat='{}{0:#,0}', ConverterCulture='id-ID'}"
                                            TextWrapping="Wrap" />
                                    </Grid>
                                    <Grid x:Name="Kelainan" Margin="0,3,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Kelainan" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Foreground="{StaticResource SecondaryDarker}"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedTagihan.Kelainan, FallbackValue='-', Converter={StaticResource StringDefaultConverter}}"
