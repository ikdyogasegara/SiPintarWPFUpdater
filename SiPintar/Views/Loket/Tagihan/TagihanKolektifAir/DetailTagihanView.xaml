                                    </Grid>
                                    <Grid x:Name="Pelayanan" Margin="0,3,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Pelayanan" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Foreground="{StaticResource SecondaryDarker}"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedTagihan.Pelayanan, StringFormat='{}{0:#,0}', ConverterCulture='id-ID'}"
