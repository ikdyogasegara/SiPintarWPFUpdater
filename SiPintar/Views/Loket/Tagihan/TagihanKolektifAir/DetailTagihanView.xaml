                                HorizontalAlignment="Stretch"
                                Background="White"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource SecondaryBlue}"
                                Header="Informasi"
                                IsExpanded="True"
                                Style="{StaticResource ExpanderPlusMinus}">
                                <StackPanel
                                    Margin="0,15,0,0"
                                    Background="White"
                                    Orientation="Vertical">
