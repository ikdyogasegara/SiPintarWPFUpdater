                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Stan Kini" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Foreground="{StaticResource SecondaryDarker}"
