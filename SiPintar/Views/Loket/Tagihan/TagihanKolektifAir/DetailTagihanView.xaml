                                            HorizontalAlignment="Left"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Diameter" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Foreground="{StaticResource SecondaryDarker}"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedTagihan.KodeDiameter, FallbackValue='-', Converter={StaticResource StringDefaultConverter}}"
                                            TextWrapping="Wrap" />
                                    </Grid>
                                    <Grid x:Name="NamaStatus" Margin="0,3,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Status" />
                                        <Grid
                                            Grid.Column="1"
                                            Height="22"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Background="{Binding SelectedTagihan.NamaStatus, Converter={StaticResource OuterStringToBrushConverter}}">
                                            <TextBlock
                                                Margin="3,0"
                                                VerticalAlignment="Center"
                                                Foreground="{Binding SelectedTagihan.NamaStatus, Converter={StaticResource InnerStringToBrushConverter}}"
                                                Style="{StaticResource SmallTitle}"
                                                Text="{Binding SelectedTagihan.NamaStatus, FallbackValue='-', Converter={StaticResource StringDefaultConverter}}" />
                                        </Grid>
                                    </Grid>
                                    <Grid x:Name="StanLalu" Margin="0,3,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Stan Lalu" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Foreground="{StaticResource SecondaryDarker}"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedTagihan.StanLalu, StringFormat='{}{0:#,0}', ConverterCulture='id-ID'}"
                                            TextWrapping="Wrap" />
                                    </Grid>
                                    <Grid x:Name="StanAngkat" Margin="0,3,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Stan Angkat" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Foreground="{StaticResource SecondaryDarker}"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedTagihan.StanAngkat, StringFormat='{}{0:#,0}', ConverterCulture='id-ID'}"
