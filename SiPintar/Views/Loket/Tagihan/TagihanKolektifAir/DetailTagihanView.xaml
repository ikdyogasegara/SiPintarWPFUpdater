                                            <ColumnDefinition Width="90" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Kategori" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Foreground="{StaticResource SecondaryDarker}"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedTagihan.JenisTagihan, FallbackValue='-', Converter={StaticResource StringDefaultConverter}}"
                                            TextWrapping="Wrap" />
                                    </Grid>
                                    <Grid Margin="0,3,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Periode" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Foreground="{StaticResource SecondaryDarker}"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedTagihan.NamaPeriode, FallbackValue='-', Converter={StaticResource StringDefaultConverter}}"
                                            TextWrapping="Wrap" />
                                    </Grid>
                                    <Grid Margin="0,3,0,0">
