                    </Border>
                </Expander>

                <Expander Style="{StaticResource ModuleExpander}" Header="Perencanaan" Margin="0 0 0 15" HorizontalAlignment="Stretch" IsExpanded="True">
                    <Border Background="White" Padding="15 0 15 10">
                        <StackPanel>
                            <TextBlock Text="Perencanaan" Margin="0 0 0 5" Style="{StaticResource Title}" Foreground="{StaticResource SecondaryBlue}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <CheckBox IsChecked="{Binding DetailPermission.PerencanaanUsulan, Mode=OneWay}" IsEnabled="False" Style="{StaticResource CheckStyleBlueDisable}">
                                        <TextBlock Text="Usulan" Style="{StaticResource CaptionSmallBody}" Margin="0 5 0 0" />
                                    </CheckBox>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <CheckBox IsChecked="{Binding DetailPermission.PerencanaanSPK, Mode=OneWay}" IsEnabled="False" Style="{StaticResource CheckStyleBlueDisable}">
                                        <TextBlock Text="Surat Perintah Kerja (SPK)" Style="{StaticResource CaptionSmallBody}" Margin="0 5 0 0" />
