<UserControl x:Class="SiPintar.Views.Main.ProfilSayaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:SiPintar.Converters"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibleConverter" True="Visible" False="Collapsed" />
            <converters:BooleanToVisibilityConverter x:Key="BooleanToCollapseConverter" True="Collapsed" False="Visible" />
            <converters:StringDefaultValueConverter x:Key="StringDefaultValueConverter" Default="-" />
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SiPintar;component/Assets/ResourceDictionaries/MainStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource BaseGray}" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.RowSpan="3" Panel.ZIndex="1">
            <Grid Panel.ZIndex="1" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibleConverter}}">
                <Image Height="30" RenderTransformOrigin="0.5, 0.5" Margin="10" Source="/SiPintar;component/Assets/Images/spinner_loading.png">
                    <Image.RenderTransform>
                        <RotateTransform x:Name="noFreeze" />
                    </Image.RenderTransform>
                    <Image.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                                Storyboard.TargetProperty="(Image.RenderTransform).(RotateTransform.Angle)"
                                                To="360" Duration="0:0:0:1" RepeatBehavior="Forever" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Image.Triggers>
                </Image>
            </Grid>

            <Grid Panel.ZIndex="1" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToCollapseConverter}}">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Visibility="{Binding IsEmpty, Converter={StaticResource BooleanToVisibleConverter}}">
                    <Image Height="90" Source="/SiPintar;component/Assets/Images/empty_data_v1.png">
                    </Image>
                    <Border Height="8"/>
                    <StackPanel>
                        <TextBlock Text="Data Anda Tidak Ditemukan!" FontStyle="Normal" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Margin="0" FontSize="12" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource Gray100}">
                                <Run Text="Silahkan periksa koneksi atau hubungi" />
                                <LineBreak />
                                <Run Text="Admin PDAM untuk melihat status akun Anda."/>
                        </TextBlock>
                    </StackPanel>
                    <Border Height="30"/>
                </StackPanel>
            </Grid>
        </Grid>

        <Border Grid.Row="0" Background="White" Margin="2 0 0 0">
            <StackPanel Margin="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock FontSize="16" FontWeight="DemiBold"  Margin="0,0,0,8" Text="{Binding DetailData.Nama}" />
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="Person" Width="14" Foreground="{StaticResource Modul}" VerticalAlignment="Center"/>
                            <TextBlock FontSize="12" TextWrapping="Wrap" LineHeight="15" Foreground="{StaticResource Gray}" Text="{Binding DetailData.NamaRole, Converter={StaticResource StringDefaultValueConverter}}" Margin="3 0 0 0" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding OnOpenResetPasswordConfirmationCommand}" Style="{StaticResource ButtonPrimarySmall}" md:ButtonAssist.CornerRadius="16" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToCollapseConverter}}" Height="30" BorderBrush="{StaticResource PictonBlue}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 2 0 0">
                                <TextBlock Text="Ganti Password" Style="{StaticResource CaptionSmallBody}" Margin="3 2 3 0" Foreground="White" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
                <Separator Background="{StaticResource BaseGray}" Margin="0 20" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Style="{StaticResource CaptionSmallBody}" Text="Nama" LineHeight="18"/>
                        <TextBlock Style="{StaticResource SmallTitle}" TextWrapping="Wrap" FontSize="14" Text="{Binding DetailData.Nama, Converter={StaticResource StringDefaultValueConverter}}" LineHeight="18" Margin="0 3 0 0"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Style="{StaticResource CaptionSmallBody}" Text="ID Pengguna" LineHeight="18"/>
                        <TextBlock Style="{StaticResource SmallTitle}" TextWrapping="Wrap" FontSize="14" Text="{Binding DetailData.NamaUser, Converter={StaticResource StringDefaultValueConverter}}" LineHeight="18" Margin="0 3 0 0"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Style="{StaticResource CaptionSmallBody}" Text="NIK" LineHeight="18"/>
                        <TextBlock Style="{StaticResource SmallTitle}" TextWrapping="Wrap" FontSize="14" Text="{Binding DetailData.NoIdentitas, Converter={StaticResource StringDefaultValueConverter}}" LineHeight="18" Margin="0 3 0 0"/>
                    </StackPanel>
                    <StackPanel Grid.Column="3">
                        <TextBlock Style="{StaticResource CaptionSmallBody}" Text="User Loket" LineHeight="18"/>
                        <TextBlock Style="{StaticResource SmallTitle}" TextWrapping="Wrap" FontSize="14" Text="{Binding SelectedData.NamaLoket, FallbackValue='-', Converter={StaticResource StringDefaultValueConverter}}" LineHeight="18" Margin="0 3 0 0"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <TextBlock Grid.Row="1" Text="Hak Akses Modul" Margin="20 15 20 10" Style="{StaticResource Title}" FontSize="14" Foreground="{StaticResource SecondaryBlue}"/>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="20 0 0 0">
            <StackPanel Margin="0 0 5 0">
                <Expander Style="{StaticResource ModuleExpander}" Header="Billing" Margin="0 0 0 15" HorizontalAlignment="Stretch" IsExpanded="True">
