                                    <CheckBox IsChecked="{Binding DetailPermission.BacameterDistribusiPelanggan, Mode=OneWay}" IsEnabled="False" Style="{StaticResource CheckStyleBlueDisable}">
                                        <TextBlock Text="Laporan Distribusi Pelanggan" Style="{StaticResource CaptionSmallBody}" Margin="0 5 0 0" />
                                    </CheckBox>
