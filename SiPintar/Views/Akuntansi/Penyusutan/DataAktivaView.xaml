<UserControl x:Class="SiPintar.Views.Akuntansi.Penyusutan.DataAktivaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SiPintar.Views.Akuntansi.Penyusutan"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:SiPintar.Converters"
             xmlns:anim="clr-namespace:SiPintar.Utilities.Animation"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <FrameworkElement x:Key="ProxyElement" DataContext="{Binding}"/>
            <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverterActivePage" FirstBrush="#028DDB" SecondBrush="#646464" />
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibleConverter" True="Visible" False="Collapsed" />
            <converters:BooleanToVisibilityConverter x:Key="BooleanToCollapseConverter" True="Collapsed" False="Visible" />
            <converters:StringToBrushConverter x:Key="StringToBrushConverter" FirstString="False" ThirdString="True" ThirdBrush="#FFF" FirstBrush="#FCE9ED" />
            <converters:StringDefaultValueConverter x:Key="StringDefaultValueConverter" Default="-" />
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="240" x:Name="FilterWrapper" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.Row="0" Background="White" Margin="16,16,16,20" CornerRadius="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="White" Margin="16, 16, 16, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Orientation="Vertical">
                        <TextBlock Text="Data Aktiva" Style="{StaticResource SmallTitle}"/>
                        <TextBlock Text="Aktivitas penyesuaian data dan sistem terkait aset perusahaan" FontSize="12" TextWrapping="Wrap" LineHeight="15" Foreground="{StaticResource Gray}" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding OnOpenAddFormCommand}" Style="{StaticResource ButtonPlain}" Background="White" Margin="0" Height="60" Padding="8 5">
                            <StackPanel Orientation="Vertical">
                                <Image Height="24" Width="24" Source="/SiPintar;component/Assets/Images/Toolbar/ic_add.png" Margin="4" />
                                <TextBlock Text="Tambah" 
                                       Style="{StaticResource CaptionSmallBody}"
                                       HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding OnOpenEditFormCommand}" Style="{StaticResource ButtonPlain}" Background="White" Margin="0" Height="60" Padding="8 5">
                            <StackPanel Orientation="Vertical">
                                <Image Height="24" Width="24" Source="/SiPintar;component/Assets/Images/Toolbar/ic_edit_people.png" Margin="4" />
                                <TextBlock Text="Koreksi" 
                                       Style="{StaticResource CaptionSmallBody}"
                                       HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding OnOpenDeleteFormCommand}" Style="{StaticResource ButtonPlain}" Background="White" Margin="0" Height="60" Padding="8 5">
                            <StackPanel Orientation="Vertical">
                                <Image Height="24" Width="24" Source="/SiPintar;component/Assets/Images/Toolbar/ic_close.png" Margin="4" />
                                <TextBlock Text="Hapus" 
                                       Style="{StaticResource CaptionSmallBody}"
                                       HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding OnCetakTagihanCommand}" Style="{StaticResource ButtonPlain}" Background="White" Margin="0" Height="60" Padding="8 5">
                            <StackPanel Orientation="Vertical">
                                <Image Height="24" Width="24" Source="/SiPintar;component/Assets/Images/Toolbar/ic_lpb_sementaran.png" Margin="4" />
                                <TextBlock Text="Pratinjau" 
                                       Style="{StaticResource CaptionSmallBody}"
                                       HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Click="Export_Click" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}" Style="{StaticResource ButtonPlain}" Background="White" Margin="0" Height="60" Padding="8 5">
                            <StackPanel Orientation="Vertical">
                                <Image Height="24" Width="24" Source="/SiPintar;component/Assets/Images/Toolbar/ic_table.png" Margin="4" />
                                <TextBlock Text="Export"
                                       Style="{StaticResource CaptionSmallBody}"
                                       HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding OnExpandCommand}" Style="{StaticResource ButtonPlain}" Background="White" Margin="0" Height="60" Padding="8 5">
                            <StackPanel Orientation="Vertical">
                                <Image Height="24" Width="24" Source="/SiPintar;component/Assets/Images/Toolbar/ic_unverifikasi_all.png" Margin="4" />
                                <TextBlock Text="Expand" 
                                       Style="{StaticResource CaptionSmallBody}"
                                       HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding OnRefreshCommand}" Style="{StaticResource ButtonPlain}" Background="White" Margin="0" Height="60" Padding="8 5">
                            <StackPanel Orientation="Vertical">
                                <Image Height="24" Width="24" Source="/SiPintar;component/Assets/Images/Toolbar/ic_refresh.png" Margin="4" />
                                <TextBlock Text="Refresh" 
                                       Style="{StaticResource CaptionSmallBody}"
                                       HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding OnOpenSettingTableFormCommand}" Style="{StaticResource ButtonPlain}" Background="White" Margin="0" Height="60" Padding="8 5">
                            <StackPanel Orientation="Vertical">
                                <Image Height="24" Width="24" Source="/SiPintar;component/Assets/Images/Toolbar/ic_table_setting.png" Margin="4" />
                                <TextBlock Text="Tabel" 
                                       Style="{StaticResource CaptionSmallBody}"
                                       HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Click="ShowFilter_Click" x:Name="ToolbarFilter" Style="{StaticResource ButtonPlain}" Background="Transparent" Padding="8 5" Height="70" VerticalAlignment="Center">
                            <StackPanel Orientation="Vertical">
                                <Image Height="20" Width="20" Source="/SiPintar;component/Assets/Images/Toolbar/ic_filter.png" Margin="5.5" />
                                <TextBlock Text="Filter Pencarian" Style="{StaticResource CaptionSmallBody}" HorizontalAlignment="Center" Width="90" TextWrapping="Wrap" TextAlignment="Center" LineHeight="1"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1" Background="White" Margin="16, 0, 16, 0">
                    <Grid Panel.ZIndex="1" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibleConverter}}">
                        <Image Height="30" RenderTransformOrigin="0.5, 0.5" Margin="10" Source="/SiPintar;component/Assets/Images/spinner_loading.png">
                            <Image.RenderTransform>
                                <RotateTransform x:Name="noFreeze" />
                            </Image.RenderTransform>
                            <Image.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="(Image.RenderTransform).(RotateTransform.Angle)"
                                                To="360" Duration="0:0:0:1" RepeatBehavior="Forever" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Image.Triggers>
                        </Image>
                    </Grid>

                    <Grid Panel.ZIndex="1" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToCollapseConverter}}">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Visibility="{Binding IsEmpty, Converter={StaticResource BooleanToVisibleConverter}}">
                            <Image Height="90" Source="/SiPintar;component/Assets/Images/empty_data_v2.png">
                            </Image>
                            <Border Height="8"/>
                            <StackPanel>
                                <TextBlock Text="Tidak Ada Data" FontStyle="Normal" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Margin="0 10 0 0" FontSize="12" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource Gray100}">
                                    <Run Text="Saat ini belum ada data yang ditampilkan." />
                                    <LineBreak />
                                    <Run Text="Silakan"/>
                                    <Button Command="{Binding OnOpenAddFormCommand}" Padding="0" Height="17" Style="{StaticResource ButtonPlain}" Background="{x:Null}" Margin="0 0 2 -5">
                                        <TextBlock FontFamily="{StaticResource SarabunSemiBold}" FontSize="12" Style="{StaticResource LabelTextLink}" Text="Tambah Jurnal Umum"/>
                                    </Button>
                                    <Run Text="terlebih dahulu"/>
                                </TextBlock>
                            </StackPanel>
                            <Border Height="30"/>
                        </StackPanel>
                    </Grid>

                    <ContentControl Visibility="Collapsed" Content="{StaticResource ProxyElement}"/>

                    <DataGrid
                        x:Name="DataGridDataAktiva"
                        DataContext="{Binding}"
                        IsReadOnly="True"
                        ItemsSource="{Binding Data, UpdateSourceTrigger=PropertyChanged}"
                        SelectedItem="{Binding  DataContext.PilihData, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}} }"
                        Style="{StaticResource DataGridRegular}"
                        CanUserSortColumns="False"
                        EnableRowVirtualization="True"
                        EnableColumnVirtualization="True"
                        md:DataGridAssist.ColumnHeaderPadding="14 6 0 6"
                        AutoGenerateColumns="False" 
                        Tag="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=DataContext}"
                        HeadersVisibility="Column"
                        SelectionMode="Extended"
                        HorizontalScrollBarVisibility="Auto"
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"
                        CanUserAddRows="False"
                        ContextMenuOpening="DataGridDataAktiva_ContextMenuOpening">
                        <DataGrid.Resources>
                            <Style BasedOn="{StaticResource DataGridHeaderDark}" TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="IsHitTestVisible" Value="False"/>
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="FontFamily" Value="{StaticResource MontserratMedium}" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                            <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource DataGridCellRegular}"/>
                        </DataGrid.Resources>
                        <DataGrid.ContextMenu>
                            <ContextMenu DataContext="{Binding Path=PlacementTarget.Tag, RelativeSource={RelativeSource Self}}" Style="{StaticResource ContextMenuRegular}">
                                <MenuItem Header="Tambah Data" InputGestureText="[F2]" Style="{StaticResource MenuItemRegular}">
                                    <MenuItem.Icon>
                                        <Grid>
                                            <md:PackIcon Width="16" Kind="Plus" Foreground="{StaticResource SecondaryBlue}" />
                                        </Grid>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Koreksi Data" InputGestureText="[F3]" Style="{StaticResource MenuItemRegular}">
                                    <MenuItem.Icon>
                                        <Grid>
                                            <md:PackIcon Width="16" Kind="FileEdit" Foreground="{StaticResource SecondaryBlue}" />
                                        </Grid>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Hapus Data" InputGestureText="[Del]" Style="{StaticResource MenuItemRegular}">
                                    <MenuItem.Icon>
                                        <Grid>
                                            <md:PackIcon Width="16" Kind="Delete" Foreground="{StaticResource SecondaryBlue}"/>
                                        </Grid>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Refresh Data" InputGestureText="[F5]" Style="{StaticResource MenuItemRegular}">
                                    <MenuItem.Icon>
                                        <Grid>
                                            <md:PackIcon Width="16" Kind="Refresh" Foreground="{StaticResource SecondaryBlue}"/>
                                        </Grid>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Ganti Tanggal" InputGestureText="[F10]" Style="{StaticResource MenuItemRegular}">
                                    <MenuItem.Icon>
                                        <Grid>
                                            <md:PackIcon Width="16" Kind="CalendarRange" Foreground="{StaticResource SecondaryBlue}"/>
                                        </Grid>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Set Sebagai Aktiva" InputGestureText="[F11]" Style="{StaticResource MenuItemRegular}">
                                    <MenuItem.Icon>
                                        <Grid>
                                            <md:PackIcon Width="16" Kind="BookArrowRight" Foreground="{StaticResource SecondaryBlue}"/>
                                        </Grid>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Batalkan Aktiva" InputGestureText="[F12]" Style="{StaticResource MenuItemRegular}">
                                    <MenuItem.Icon>
                                        <Grid>
                                            <md:PackIcon Width="16" Kind="CloseCircle" Foreground="{StaticResource SecondaryBlue}"/>
                                        </Grid>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Uraian, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" MinWidth="240" Header="Uraian" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.Uraian, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding Tahun, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Tahun" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.Tahun, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding Lokasi, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Lokasi" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.Lokasi, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding Asal, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Asal" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.Asal, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding Tanggal, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Tanggal" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.Tanggal, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding Nilai, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Nilai" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.Nilai, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding Mutasi, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Mutasi" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.Mutasi, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding Perolehan, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Perolehan" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.Perolehan, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding JmlTahun, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Jml. Tahun" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.JmlTahun, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding Persen, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Persen (%)" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.Persen, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding NilaiBukuLalu, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Nilai Buku Lalu" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.NilaiBukuLalu, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding AkunPenyLalu, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Akun Peny. Lalu" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.AkunPenyLalu, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <!-- ================ PENYUSUTAN ====================-->
                            <DataGridTextColumn Binding="{Binding PenyusutanJanuari, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Penyusutan Januari" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.PenyusutanJanuari, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding PenyusutanFebruari, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Penyusutan Februari" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.PenyusutanFebruari, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding PenyusutanMaret, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Penyusutan Maret" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.PenyusutanMaret, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding PenyusutanApril, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Penyusutan April" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.PenyusutanApril, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding PenyusutanMei, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Penyusutan Mei" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.PenyusutanMei, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding PenyusutanJuni, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Penyusutan Juni" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.PenyusutanJuni, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding PenyusutanJuli, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Penyusutan Juli" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.PenyusutanJuli, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding PenyusutanAgustus, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Penyusutan Agustus" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.PenyusutanAgustus, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding PenyusutanSeptember, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Penyusutan September" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.PenyusutanSeptember, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding PenyusutanOktober, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Penyusutan Oktober" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.PenyusutanOktober, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding PenyusutanNovember, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Penyusutan November" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.PenyusutanNovember, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding PenyusutanDesember, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Penyusutan Desember" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.PenyusutanDesember, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            
                            <!-- ================ AKUN PENYUSUTAN ====================-->
                            <DataGridTextColumn Binding="{Binding AkunPenyusutanJanuari, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Akun Penyusutan Januari" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.AkunPenyusutanJanuari, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding AkunPenyusutanFebruari, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Akun Penyusutan Februari" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.AkunPenyusutanFebruari, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding AkunPenyusutanMaret, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Akun Penyusutan Maret" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.AkunPenyusutanMaret, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding AkunPenyusutanApril, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Akun Penyusutan April" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.AkunPenyusutanApril, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding AkunPenyusutanMei, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Akun Penyusutan Mei" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.AkunPenyusutanMei, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding AkunPenyusutanJuni, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Akun Penyusutan Juni" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.AkunPenyusutanJuni, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding AkunPenyusutanJuli, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Akun Penyusutan Juli" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.AkunPenyusutanJuli, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding AkunPenyusutanAgustus, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Akun Penyusutan Agustus" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.AkunPenyusutanAgustus, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding AkunPenyusutanSeptember, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Akun Penyusutan September" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.AkunPenyusutanSeptember, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding AkunPenyusutanOktober, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Akun Penyusutan Oktober" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.AkunPenyusutanOktober, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding AkunPenyusutanNovember, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Akun Penyusutan November" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.AkunPenyusutanNovember, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding AkunPenyusutanDesember, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Akun Penyusutan Desember" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.AkunPenyusutanDesember, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />

                            <!-- ================ NILAI BUKU ====================-->
                            <DataGridTextColumn Binding="{Binding NilaiBukuJanuari, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Nilai Buku Januari" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.NilaiBukuJanuari, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding NilaiBukuFebruari, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Nilai Buku Februari" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.NilaiBukuFebruari, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding NilaiBukuMaret, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Nilai Buku Maret" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.NilaiBukuMaret, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding NilaiBukuApril, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Nilai Buku April" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.NilaiBukuApril, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding NilaiBukuMei, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Nilai Buku Mei" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.NilaiBukuMei, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding NilaiBukuJuni, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Nilai Buku Juni" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.NilaiBukuJuni, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding NilaiBukuJuli, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Nilai Buku Juli" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.NilaiBukuJuli, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding NilaiBukuAgustus, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Nilai Buku Agustus" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.NilaiBukuAgustus, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding NilaiBukuSeptember, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Nilai Buku September" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.NilaiBukuSeptember, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding NilaiBukuOktober, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Nilai Buku Oktober" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.NilaiBukuOktober, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding NilaiBukuNovember, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Nilai Buku November" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.NilaiBukuNovember, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            <DataGridTextColumn Binding="{Binding NilaiBukuDesember, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Header="Nilai Buku Desember" ElementStyle="{StaticResource TextDataGridCellRegular}" Visibility="{Binding DataContext.TableSetting.NilaiBukuDesember, Converter={StaticResource BooleanToVisibleConverter}, Source={StaticResource ProxyElement}}" />
                            
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
                <Grid Grid.Row="2" Margin="16,0,16,8">
                    <Border Background="{StaticResource Black20}" BorderBrush="{StaticResource Black50}" BorderThickness="1 0 1 1" CornerRadius="0, 0, 4, 4" >
                        <Grid Margin="11 8 14 7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="ShowOption" 
                                Style="{StaticResource ComboBoxInputFormPagination}" 
                                HorizontalAlignment="Left" VerticalAlignment="Center" Width="64" Height="25"
                                SelectedItem="{Binding LimitData}" 
                                SelectedValuePath="Key"
                                DisplayMemberPath="Value"
                                ItemsSource="{Binding ShowOptions, Mode=OneWay}"
                                SelectionChanged="ShowOption_SelectionChanged"
                                IsEnabled="{Binding Path=IsLoading, Converter={StaticResource InverseBooleanConverter}, ConverterParameter=IsLoading}"/>
                            <TextBlock Grid.Column="1" Text="Data per Halaman" Style="{StaticResource CaptionSmallBody}" LineHeight="18" Foreground="{StaticResource Black90}" VerticalAlignment="Center" Margin="6,0,0,0"/>
                            <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding TotalRecord, StringFormat={}{0} Data SPK}" Style="{StaticResource CaptionSmallBody}" LineHeight="18" Foreground="{StaticResource Black90}" VerticalAlignment="Center" Margin="0 0 16 0"/>
                                <Button IsEnabled="{Binding IsPreviousButtonEnabled}" Click="OnPrevPageClick" Style="{StaticResource ButtonPlain}" Padding="0" Height="16">
                                    <Grid>
                                        <md:PackIcon Kind="ChevronLeft" Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Mode=Self}, Converter={StaticResource BooleanToVisibleConverter}}" Foreground="{StaticResource SecondaryBlue}" Background="{StaticResource Black20}" Height="16"/>
                                        <md:PackIcon Kind="ChevronLeft" Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Mode=Self}, Converter={StaticResource BooleanToCollapseConverter}}" Foreground="{StaticResource Black50}" Background="{StaticResource Black20}" Height="16"/>
                                    </Grid>
                                </Button>
                                <TextBlock Text="1" Style="{StaticResource CaptionSmallBody}" LineHeight="12" Foreground="{Binding IsLeftPageNumberActive, Converter={StaticResource BooleanToBrushConverterActivePage}}" VerticalAlignment="Center" Margin="13 0 0 0"/>
                                <TextBlock Text="..." Visibility="{Binding IsLeftPageNumberFillerVisible, Converter={StaticResource BooleanToVisibleConverter}}" Style="{StaticResource CaptionSmallBody}" LineHeight="12" Foreground="{StaticResource Black90}" VerticalAlignment="Center" Margin="13 0 0 0"/>
                                <TextBlock Text="{Binding CurrentPage}" Visibility="{Binding IsMiddlePageNumberVisible, Converter={StaticResource BooleanToVisibleConverter}}" Style="{StaticResource CaptionSmallBody}" LineHeight="12" Foreground="{Binding IsMiddlePageNumberVisible, Converter={StaticResource BooleanToBrushConverterActivePage}}" VerticalAlignment="Center" Margin="13 0 0 0"/>
                                <TextBlock Text="..." Visibility="{Binding IsRightPageNumberFillerVisible, Converter={StaticResource BooleanToVisibleConverter}}" Style="{StaticResource CaptionSmallBody}" LineHeight="12" Foreground="{StaticResource Black90}" VerticalAlignment="Center" Margin="13 0 0 0"/>
                                <TextBlock Text="{Binding TotalPage}" Style="{StaticResource CaptionSmallBody}" LineHeight="12" Foreground="{Binding IsRightPageNumberActive, Converter={StaticResource BooleanToBrushConverterActivePage}}" VerticalAlignment="Center" Margin="13 0"/>
                                <Button IsEnabled="{Binding IsNextButtonEnabled}" Click="OnNextPageClick" Style="{StaticResource ButtonPlain}" Padding="0" Height="16">
                                    <Grid>
                                        <md:PackIcon Kind="ChevronRight" Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Mode=Self}, Converter={StaticResource BooleanToVisibleConverter}}" Foreground="{StaticResource SecondaryBlue}" Background="{StaticResource Black20}" Height="16"/>
                                        <md:PackIcon Kind="ChevronRight" Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Mode=Self}, Converter={StaticResource BooleanToCollapseConverter}}" Foreground="{StaticResource Black50}" Background="{StaticResource Black20}" Height="16"/>
                                    </Grid>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <Button Style="{StaticResource BtnWrapper}" Click="ShowFilter_Click" x:Name="ToggleShowFilter" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 15" Visibility="Collapsed">
            <Border BorderBrush="{StaticResource Cerulean}" Background="{StaticResource Cerulean}" BorderThickness="1" CornerRadius="2 0 0 2" Width="10" Height="35" VerticalAlignment="Center">
                <Border Background="White" CornerRadius="50 0 0 50" Width="4" Height="7" Margin="2 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" />
            </Border>
        </Button>

        <Border x:Name="FilterSection" Width="240" BorderBrush="{StaticResource Black10}" BorderThickness="2 2 0 0" Grid.Column="2" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="65"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="91"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Background="White">
                    <Grid Width="180" HorizontalAlignment="Center" Margin="0 14 0 14">
                        <Button Command="{Binding OnOpenPenyusutanFormCommand}" Content="Proses Penyusutan" Style="{StaticResource ButtonSecondarySmall}" md:ButtonAssist.CornerRadius="13" Visibility="{Binding IsLoadingForm, Converter={StaticResource BooleanToCollapseConverter}}"/>
                    </Grid>
                    <StackPanel Height="5" Background="#E5E5E5"></StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal" Background="White">
                    <Button Style="{StaticResource BtnWrapper}" Click="HideFilter_Click">
                        <Border BorderBrush="{StaticResource Cerulean}" Background="{StaticResource Cerulean}" BorderThickness="1" CornerRadius="0 2 2 0" Width="10" Height="35" VerticalAlignment="Center">
                            <Border Background="White" CornerRadius="0 50 50 0" Width="4" Height="7" Margin="2 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        </Border>
                    </Button>
                    <TextBlock Text="Filter Pencarian" Style="{StaticResource Title}" LineHeight="16" VerticalAlignment="Center" Margin="13 0 0 0"/>
                </StackPanel>

                <ScrollViewer Grid.Row="2" Background="White">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0">
                            <StackPanel x:Name="TahunBorder" VerticalAlignment="Center" Orientation="Vertical" Margin="16 0 12 13">
                                <TextBlock Text="Tahun*" Style="{StaticResource SmallTitle}" Margin="0,0,0,8"/>
                                <Grid>
                                    <ComboBox x:Name="Tahun" Width="{Binding ElementName=TahunBorder, Path=ActualWidth}"  ItemsSource="{Binding TahunList}" DisplayMemberPath="Tahun" SelectedItem="{Binding FilterTahun, Mode=TwoWay}" Style="{StaticResource ComboBoxInputForm}">
                                    </ComboBox>
                                    <TextBlock Text="Pilih tahun" DataContext="{Binding ElementName=Tahun, Path=Text}" Margin="10,0,0,0" Style="{StaticResource TextBoxPlaceholder}"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="1" >
                            <StackPanel x:Name="KodeAktivaBorder" VerticalAlignment="Center" Orientation="Vertical" Margin="16 0 12 13">
                                <CheckBox Style="{StaticResource FilterCheckBox}" IsChecked="{Binding IsKodeAktivaChecked}" Margin="0,0,0,10" Content="Kode Aktiva"/>
                                <Grid>
                                    <TextBox x:Name="KodeAktiva" Style="{StaticResource TextBoxInputForm}" IsEnabled="{Binding IsKodeAktivaChecked}" Text="{Binding FilterKodeAktiva, Mode=TwoWay}" VerticalAlignment="Center" />
                                    <TextBlock DataContext="{Binding ElementName=KodeAktiva, Path=Text}" Text="Masukan Kode Aktiva" Style="{StaticResource TextBoxPlaceholder}" Padding="0" Foreground="{StaticResource Gray100}" />
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="2" >
                            <StackPanel x:Name="GolonganAktivaBorder" VerticalAlignment="Center" Orientation="Vertical" Margin="16 0 12 13">
                                <CheckBox Style="{StaticResource FilterCheckBox}" IsChecked="{Binding IsGolonganAktivaChecked}" Margin="0,0,0,10" Content="GolonganAktiva"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <ComboBox x:Name="FilterKodeGolonganAktiva"  HorizontalAlignment="Stretch" Margin="0,0,10,0" Style="{StaticResource ComboBoxInputForm}"
                                           Validation.ErrorTemplate="{x:Null}"
                                          IsEditable="False" 
                                          ItemsSource="{Binding FilterKodeGolonganAktivaList, Mode=OneWay}"
                                          SelectedItem="{Binding FilterKodeGolonganAktiva}"
                                          IsEnabled="{Binding IsGolonganAktivaChecked}"
                                          PreviewKeyUp="CheckForm_PreviewKeyUp"/>
                                        <TextBlock Text="Kode" DataContext="{Binding ElementName=FilterKodeGolonganAktiva, Path=Text}" Margin="10,0,0,0" Style="{StaticResource TextBoxPlaceholder}"/>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <ComboBox x:Name="FilterNamaGolonganAktiva" Style="{StaticResource ComboBoxInputForm}"
                                           Validation.ErrorTemplate="{x:Null}"
                                          IsEditable="False" 
                                          ItemsSource="{Binding FilterNamaGolonganAktivaList, Mode=OneWay}"
                                          SelectedItem="{Binding FilterNamaGolonganAktiva}"
                                          IsEnabled="{Binding IsGolonganAktivaChecked}"
                                          HorizontalAlignment="Stretch"
                                          PreviewKeyUp="CheckForm_PreviewKeyUp"/>
                                        <TextBlock Text="Golongan" DataContext="{Binding ElementName=FilterNamaGolonganAktiva, Path=Text}" Margin="10,0,0,0" Style="{StaticResource TextBoxPlaceholder}"/>
                                    </Grid>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="3" >
                            <StackPanel x:Name="UraianBorder" VerticalAlignment="Center" Orientation="Vertical" Margin="16 0 12 13">
                                <CheckBox Style="{StaticResource FilterCheckBox}" IsChecked="{Binding IsUraianChecked}" Margin="0,0,0,10" Content="Uraian"/>
                                <Grid>
                                    <TextBox x:Name="Uraian" Style="{StaticResource TextBoxInputForm}" IsEnabled="{Binding IsUraianChecked}" Text="{Binding FilterUraian, Mode=TwoWay}" VerticalAlignment="Center" />
                                    <TextBlock DataContext="{Binding ElementName=Uraian, Path=Text}" Text="Masukan Uraian" Style="{StaticResource TextBoxPlaceholder}" Padding="0" Foreground="{StaticResource Gray100}" />
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="4">
                            <StackPanel x:Name="NomorBarangBorder" VerticalAlignment="Center" Orientation="Vertical" Margin="16 0 12 13">
                                <CheckBox Style="{StaticResource FilterCheckBox}" IsChecked="{Binding IsNomorBarangChecked}" Margin="0,0,0,10" Content="Nomor Barang"/>
                                <Grid>
                                    <TextBox x:Name="NomorBarang" Style="{StaticResource TextBoxInputForm}" IsEnabled="{Binding IsNomorBarangChecked}" Text="{Binding FilterNomorBarang, Mode=TwoWay}" VerticalAlignment="Center" />
                                    <TextBlock DataContext="{Binding ElementName=NomorBarang, Path=Text}" Text="Masukan Nomor Barang" Style="{StaticResource TextBoxPlaceholder}" Padding="0" Foreground="{StaticResource Gray100}" />
                                </Grid>
                            </StackPanel>
                        </Border>

                        <StackPanel Grid.Row="5" Margin="16 0 12 13">
                            <CheckBox Style="{StaticResource FilterCheckBox}" IsChecked="{Binding IsTanggalPerolehChecked}" Margin="0,0,0,10" Content="Tanggal Peroleh"/>
                            <Border Grid.Column="2" BorderBrush="{StaticResource Gray100}" BorderThickness="1" CornerRadius="3">
                                <Grid>
                                    <DatePicker x:Name="TanggalMulai" IsEnabled="{Binding IsTanggalPerolehChecked}"  SelectedDate="{Binding FilterTanggalMulai, Mode=TwoWay}" Style="{StaticResource DefaultDatePicker}" Height="30" Padding="6 0 0 0" BorderThickness="0" PreviewKeyUp="Tgl_PreviewKeyUp"/>
                                    <TextBlock DataContext="{Binding ElementName=TanggalMulai, Path=SelectedDate}" Text="Masukkan tanggal mulai" Style="{StaticResource ComboBoxSelectOverlay}" Panel.ZIndex="10" Padding="5,2,7,0" Foreground="{StaticResource Gray100}" />
                                </Grid>
                            </Border>
                            <Border Grid.Column="2" BorderBrush="{StaticResource Gray100}" BorderThickness="1" CornerRadius="3" Margin="0,5,0,0">
                                <Grid>
                                    <DatePicker x:Name="TanggalAkhir" IsEnabled="{Binding IsTanggalPerolehChecked}" SelectedDate="{Binding FilterTanggalAkhir, Mode=TwoWay}" Style="{StaticResource DefaultDatePicker}" Height="30" Padding="6 0 0 0" BorderThickness="0" PreviewKeyUp="Tgl_PreviewKeyUp"/>
                                    <TextBlock DataContext="{Binding ElementName=TanggalAkhir, Path=SelectedDate}" Text="Masukkan tanggal akhir" Style="{StaticResource ComboBoxSelectOverlay}" Panel.ZIndex="10" Padding="5,2,7,0" Foreground="{StaticResource Gray100}" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="6" Margin="16 0 12 13">
                            <CheckBox Style="{StaticResource FilterCheckBox}" IsChecked="{Binding IsGantiJadiChecked}" Margin="0,0,0,10" Content="Ganti Jadi"/>
                            <Border Grid.Column="2" BorderBrush="{StaticResource Gray100}" BorderThickness="1" CornerRadius="3">
                                <Grid>
                                    <DatePicker x:Name="TanggalGantiJadi" IsEnabled="{Binding IsGantiJadiChecked}"  SelectedDate="{Binding FilterTanggalGantiJadi, Mode=TwoWay}" Style="{StaticResource DefaultDatePicker}" Height="30" Padding="6 0 0 0" BorderThickness="0" PreviewKeyUp="Tgl_PreviewKeyUp"/>
                                    <TextBlock DataContext="{Binding ElementName=TanggalGantiJadi, Path=SelectedDate}" Text="Masukkan tanggal mulai" Style="{StaticResource ComboBoxSelectOverlay}" Panel.ZIndex="10" Padding="5,2,7,0" Foreground="{StaticResource Gray100}" />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="7" Margin="16 0 12 13">
                            <CheckBox IsChecked="{Binding IsSisaChecked}" Style="{StaticResource FilterCheckBox}" Margin="0,0,0,10" Content="Tampilkan Nilai Buku >1 (Sisa)"/>
                        </StackPanel>
                        <StackPanel Grid.Row="8" Margin="16 0 12 13">
                            <CheckBox IsChecked="{Binding IsHabisChecked}" Style="{StaticResource FilterCheckBox}" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock>Tampilkan Nilai Buku &lt;=1 </TextBlock>
                                    <TextBlock>(Habis)</TextBlock>
                                </StackPanel>
                            </CheckBox>
                        </StackPanel>
                        <StackPanel Grid.Row="9" Margin="16 0 12 13">
                            <CheckBox IsChecked="{Binding IsAtdpChecked}"  Style="{StaticResource FilterCheckBox}" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock>ATDP (Akuntansi tetap </TextBlock>
                                    <TextBlock>dalam penyelesaian)</TextBlock>
                                </StackPanel>
                            </CheckBox>
                        </StackPanel>
                        <StackPanel Grid.Row="10" Margin="16 0 12 13">
                            <CheckBox IsChecked="{Binding IsAktivaChecked}" Style="{StaticResource FilterCheckBox}" Margin="0,0,0,10" Content="AKTIVA (Asset Tetap)"/>
                        </StackPanel>
                        <StackPanel Grid.Row="11" Margin="16 0 12 13">
                            <CheckBox IsChecked="{Binding IsAmortisasiChecked}" Style="{StaticResource FilterCheckBox}" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock>AMORTISASI (Beban. </TextBlock>
                                    <TextBlock>Ditangguhkan)</TextBlock>
                                </StackPanel>
                            </CheckBox>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <StackPanel Grid.Row="3" Margin="0 1 0 0" Background="White" VerticalAlignment="Bottom">
                    <Button Command="{Binding OnRefreshCommand}" Style="{StaticResource ButtonSecondarySmall}" Content="Terapkan Filter" Margin="8 17 8 0"/>
                    <Button Command="{Binding OnResetFilterCommand}" Style="{StaticResource ButtonPlain}" Height="30" FontSize="10" Content="Atur Ulang Filter" Margin="8 7" Background="White" Foreground="{StaticResource SecondaryBlue}" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
