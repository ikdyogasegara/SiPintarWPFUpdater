                                    LineHeight="18"
                                    Style="{StaticResource CaptionSmallBody}"
                                    Text="Nama" />
                                <TextBlock
                                    Margin="0,3,10,0"
                                    FontSize="14"
                                    LineHeight="18"
                                    Style="{StaticResource SmallTitle}"
                                    Text="{Binding SelectedPiutangAir.Nama, Converter={StaticResource StringDefaultValueConverter}}"
                                    TextWrapping="Wrap" />
