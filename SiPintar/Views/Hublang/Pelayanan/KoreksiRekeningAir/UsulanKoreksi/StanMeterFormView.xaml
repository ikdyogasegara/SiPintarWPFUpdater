                                                <Run Text="{Binding SelectedPiutangAir.Administrasi, Converter={StaticResource StringDefaultValueConverter}, StringFormat='{}{0:#,0}', ConverterCulture='id-ID', FallbackValue='0'}" />
                                            </TextBlock>
                                            <TextBlock
