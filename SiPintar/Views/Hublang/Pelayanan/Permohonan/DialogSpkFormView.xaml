                                                                Margin="0,8,0,0"
                                                                Background="{StaticResource BaseGray}"
                                                                CornerRadius="2">
                                                                <Grid>
                                                                    <gmaps:GMapControl
                                                                        x:Name="MainMap"
                                                                        Height="200"
                                                                        Focusable="False"
                                                                        IsHitTestVisible="False" />
                                                                    <Button
                                                                        Width="25"
                                                                        Height="25"
                                                                        Margin="0,4,4,0"
                                                                        HorizontalAlignment="Right"
                                                                        VerticalAlignment="Top"
                                                                        Background="#a7ddf7"
                                                                        Click="OpenMap_Click"
                                                                        Style="{StaticResource BtnWrapper}">
                                                                        <md:PackIcon
                                                                            Width="25"
                                                                            HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"
                                                                            Kind="Fullscreen" />
                                                                    </Button>
                                                                    <StackPanel
                                                                        Margin="0,0,4,4"
                                                                        HorizontalAlignment="Right"
                                                                        VerticalAlignment="Bottom">
                                                                        <Button
                                                                            x:Name="ZoomInButton"
                                                                            Width="25"
                                                                            Height="25"
                                                                            Background="#a7ddf7"
                                                                            Click="ZoomInButton_Click"
                                                                            Style="{StaticResource BtnWrapper}">
                                                                            <md:PackIcon
                                                                                Width="25"
                                                                                Margin="0"
                                                                                Kind="Add" />
                                                                        </Button>
                                                                        <Border Height="5" />
                                                                        <Button
                                                                            x:Name="ZoomOutButton"
                                                                            Width="25"
                                                                            Height="25"
                                                                            Background="#a7ddf7"
                                                                            Click="ZoomOutButton_Click"
                                                                            Style="{StaticResource BtnWrapper}">
                                                                            <md:PackIcon
                                                                                Width="25"
                                                                                Margin="0"
                                                                                Kind="Minus" />
                                                                        </Button>
                                                                    </StackPanel>
                                                                    <Image
                                                                        x:Name="CenterMarker"
                                                                        Width="30"
                                                                        Panel.ZIndex="2"
                                                                        Source="/SiPintar;component/Assets/Images/Map/ic_marker_red.png" />
                                                                </Grid>
                                                            </Border>
                                                        </Grid>

                                                        <Border Height="15" />

                                                        <StackPanel>
                                                            <TextBlock Style="{StaticResource CaptionSmallBody}" Text="Alamat Map" />
                                                            <TextBlock
                                                                x:Name="AlamatMap"
                                                                Margin="0,3,0,0"
                                                                Style="{StaticResource SmallTitle}"
                                                                Text="{Binding FormData.AlamatMap, Mode=TwoWay}"
                                                                TextWrapping="Wrap" />
                                                            <CheckBox
                                                                x:Name="IsAlamatMap"
                                                                Margin="0,20,0,20"
                                                                Content="Atur alamat map sebagai alamat utama"
                                                                IsChecked="{Binding IsAlamatMapFormChecked, Mode=TwoWay}"
                                                                Style="{StaticResource FilterCheckBox}"
                                                                Visibility="Collapsed" />
                                                            <Grid Margin="0,20,0,0">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition />
                                                                    <ColumnDefinition />
                                                                </Grid.ColumnDefinitions>

                                                                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                                                    <TextBlock Style="{StaticResource CaptionSmallBody}" Text="Latitude" />
                                                                    <TextBlock
                                                                        x:Name="LatText"
                                                                        Margin="0,3,0,0"
                                                                        Style="{StaticResource SmallTitle}"
                                                                        Text="{Binding FormData.Latitude, Mode=TwoWay}"
                                                                        TextWrapping="Wrap" />
                                                                </StackPanel>
                                                                <StackPanel Grid.Column="1" Margin="0,0,0,0">
                                                                    <TextBlock Style="{StaticResource CaptionSmallBody}" Text="Longitude" />
                                                                    <TextBlock
                                                                        x:Name="LonText"
                                                                        Margin="0,3,0,0"
                                                                        Style="{StaticResource SmallTitle}"
                                                                        Text="{Binding FormData.Longitude, Mode=TwoWay}"
                                                                        TextWrapping="Wrap" />
                                                                </StackPanel>
                                                            </Grid>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>

                                        </ScrollViewer>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </ScrollViewer>

            <Border
                Grid.Row="3"
                Margin="0,0,0,0"
                Padding="16,0,32,0"
                Background="{StaticResource Black20}"
                BorderBrush="{StaticResource Black20}"
                BorderThickness="1"
                CornerRadius="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        x:Name="Tips"
                        Grid.Column="0"
                        Orientation="Horizontal"
                        Visibility="Collapsed">
                        <Border
                            Width="20"
                            Height="20"
                            VerticalAlignment="Center"
                            Background="#028DDB"
                            CornerRadius="50">
                            <TextBlock
                                Margin="2,2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource SarabunRegular}"
                                Foreground="White"
                                Text="i" />
                        </Border>
                        <TextBlock
                            Margin="9,0,0,0"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource SarabunRegular}"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Text="Klik dua kali untuk memilih pelanggan" />
                    </StackPanel>
                    <StackPanel
                        x:Name="BtnBack"
                        Grid.Column="0"
                        Margin="16,0,0,0"
                        Orientation="Horizontal"
                        Visibility="Collapsed">
                        <Button
                            Width="80"
                            Height="35"
                            Click="BtnBackClick"
                            Style="{StaticResource ButtonSecondary2}">
                            Kembali
                        </Button>
                    </StackPanel>
                    <StackPanel
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Width="75"
                            Height="35"
                            Command="{x:Static md:DialogHost.CloseDialogCommand}"
                            Content="Batal"
                            Style="{StaticResource ButtonSecondary2}" />
                        <Button
                            x:Name="BtnSubmit"
                            Width="170"
                            Height="35"
                            Margin="13,0,0,0"
                            Click="Button_Submit"
                            Content="Proses"
                            IsEnabled="False"
                            Style="{StaticResource ButtonPrimary2}"
                            Visibility="Collapsed" />
                    </StackPanel>
                </Grid>
            </Border>
            <md:DialogHost DialogTheme="Inherit" Identifier="SambunganSubDialog" />
        </Grid>
    </md:DialogHost>
</UserControl>