<UserControl
    x:Class="SiPintar.Views.Hublang.Pelayanan.Langganan.KoreksiPelangganLimbahFormView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:SiPintar.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gmaps="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:other="clr-namespace:SiPintar.Views.Global.Other"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SiPintar;component/Assets/ResourceDictionaries/SideNavigationStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:BooleanToVisibilityConverter
                x:Key="BooleanToVisibleConverter"
                False="Collapsed"
                True="Visible" />
            <converters:BooleanToVisibilityConverter
                x:Key="BooleanToCollapseConverter"
                False="Visible"
                True="Collapsed" />
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <converters:StringDefaultValueConverter x:Key="StringDefaultValueConverter" Default="-" />
            <converters:NullVisibilityConverter
                x:Key="NullToCollapseConverter"
                False="Visible"
                True="Collapsed" />
            <converters:NullVisibilityConverter
                x:Key="NullToVisibleConverter"
                False="Collapsed"
                True="Visible" />

            <Style x:Key="IconZoom" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource MontserratMedium}" />
                <Setter Property="Foreground" Value="{StaticResource Astronaut}" />
                <Setter Property="FontSize" Value="24px" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="Cursor" Value="Hand" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <md:DialogHost DialogTheme="Inherit" Identifier="InnerHublangRootDialog">
        <Grid>
            <Border
                Width="1000"
                MaxHeight="700"
                Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Background="{StaticResource BaseAppHublang}"
                        Orientation="Vertical">
                        <Grid Margin="10,5">
                            <Grid Margin="10,7,15,5">
                                <TextBlock
                                    x:Name="Title"
                                    Foreground="White"
                                    LineHeight="10"
                                    Style="{StaticResource BigTitle}"
                                    Text="Koreksi Pelanggan Limbah" />
                            </Grid>
                            <StackPanel
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">
                                <Border
                                    Height="16"
                                    Margin="5,0"
                                    Background="White"
                                    CornerRadius="2">
                                    <TextBlock
                                        Padding="6,1,6,1"
                                        FontSize="10"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource BaseAppHublang}">
                                        Esc
                                    </TextBlock>
                                </Border>

                                <Button
                                    Width="14"
                                    Height="14"
                                    Margin="8"
                                    Padding="0"
                                    Background="{x:Null}"
                                    Command="{x:Static md:DialogHost.CloseDialogCommand}"
                                    Style="{StaticResource ButtonPlain}">
                                    <md:PackIcon
                                        Margin="0"
                                        Foreground="White"
                                        Kind="Close" />
                                </Button>
                            </StackPanel>

                        </Grid>
                    </StackPanel>
                    <Grid Grid.Row="1" Margin="16,16,16,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Margin="0,0,20,0">
                                <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                                    <RadioButton
                                        x:Name="DataLangganan"
                                        Checked="SubMenu_Checked"
                                        Content="Data Langganan"
                                        FontSize="13"
                                        FontWeight="DemiBold"
                                        GroupName="SubMenu"
                                        Style="{StaticResource NavHorizontalStyle}" />
                                    <RadioButton
                                        x:Name="FotodanMap"
                                        Checked="SubMenu_Checked"
                                        Content="Foto dan Map"
                                        FontSize="13"
                                        FontWeight="DemiBold"
                                        GroupName="SubMenu"
                                        Style="{StaticResource NavHorizontalStyle}" />
                                </StackPanel>

                                <Border
                                    Height="1.2"
                                    Margin="0,0,0,-1"
                                    VerticalAlignment="Bottom"
                                    Background="{StaticResource BaseGray}" />
                            </StackPanel>

                            <Grid
                                Grid.Column="1"
                                Margin="0,0,0,15"
                                HorizontalAlignment="Right">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="310" />
                                </Grid.ColumnDefinitions>
                                <Border
                                    Grid.Column="0"
                                    Padding="10,5,10,5"
                                    Background="{StaticResource Black10}">
                                    <StackPanel>
                                        <TextBlock
                                            Margin="0,3,0,0"
                                            LineHeight="18"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Nomor Limbah" />
                                        <TextBlock
                                            Margin="0,3,0,0"
                                            FontSize="14"
                                            Foreground="{StaticResource SuccessSalem}"
                                            LineHeight="18"
                                            Style="{StaticResource SmallTitle}"
                                            Text="{Binding SelectedData.NomorLimbah, Converter={StaticResource StringDefaultValueConverter}}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                                <Border
                                    Grid.Column="2"
                                    Padding="10,5,10,5"
                                    Background="{StaticResource Black10}">
                                    <StackPanel>
                                        <TextBlock
                                            Margin="0,3,0,0"
                                            LineHeight="18"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Nomor Air" />
                                        <TextBlock
                                            Margin="0,3,0,0"
                                            FontSize="14"
                                            Foreground="{StaticResource SuccessSalem}"
                                            LineHeight="18"
                                            Style="{StaticResource SmallTitle}"
                                            Text="{Binding SelectedData.NoSamb, Converter={StaticResource StringDefaultValueConverter}}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                                <Border
                                    x:Name="StatusBg"
                                    Grid.Column="4"
                                    Padding="10,5,10,5"
                                    Background="{StaticResource Black10}">
                                    <StackPanel>
                                        <TextBlock
                                            Margin="0,3,0,0"
                                            LineHeight="18"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Status" />
                                        <TextBlock
                                            x:Name="NamaStatusText"
                                            Margin="0,3,0,0"
                                            FontSize="14"
                                            LineHeight="18"
                                            Style="{StaticResource SmallTitle}"
                                            Text="{Binding SelectedData.NamaStatus, Converter={StaticResource StringDefaultValueConverter}}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>

                            </Grid>
                        </Grid>

                        <Grid
                            x:Name="DataLanggananSection"
                            Grid.Row="1"
                            Panel.ZIndex="2"
                            Background="{StaticResource White100}">
                            <ScrollViewer Margin="0,0,-16,0" VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="20">
                                    <TextBlock
                                        Foreground="{StaticResource SecondaryBlue}"
                                        Style="{StaticResource Title}"
                                        Text="Info Dasar Pelanggan" />
                                    <Grid Margin="0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="300" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="15" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="15" />
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0" Grid.Column="0">
                                            <TextBlock Style="{StaticResource SmallTitle}" Text="Nama" />
                                            <Grid Margin="0,0,15,0">
                                                <TextBox
                                                    x:Name="Nama"
                                                    IsEnabled="False"
                                                    PreviewKeyUp="CheckForm_PreviewKeyUp"
                                                    Style="{StaticResource TextBoxInputForm}"
                                                    Text="{Binding FormData.Nama, Mode=TwoWay}"
                                                    Validation.ErrorTemplate="{x:Null}" />
                                                <TextBlock
                                                    Padding="0"
                                                    DataContext="{Binding ElementName=Nama, Path=Text}"
                                                    Foreground="{StaticResource Gray100}"
                                                    Style="{StaticResource TextBoxPlaceholder}"
                                                    Text="" />
                                            </Grid>
                                        </StackPanel>
                                        <StackPanel Grid.Row="2" Grid.Column="0">
                                            <TextBlock Style="{StaticResource SmallTitle}" Text="Alamat" />
                                            <Grid Margin="0,0,15,0">
                                                <TextBox
                                                    x:Name="Alamat"
                                                    IsEnabled="{Binding IsEdit}"
                                                    PreviewKeyUp="CheckForm_PreviewKeyUp"
                                                    Style="{StaticResource TextBoxInputForm}"
                                                    Text="{Binding FormData.Alamat, Mode=TwoWay}"
                                                    Validation.ErrorTemplate="{x:Null}" />
                                                <TextBlock
                                                    Padding="0"
                                                    DataContext="{Binding ElementName=Alamat, Path=Text}"
                                                    Foreground="{StaticResource Gray100}"
                                                    Style="{StaticResource TextBoxPlaceholder}"
                                                    Text="" />
                                            </Grid>
                                        </StackPanel>
                                        <Grid Grid.Row="2" Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="10" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Style="{StaticResource SmallTitle}" Text="RT" />
                                                <Grid Margin="0,0,15,0">
                                                    <TextBox
                                                        x:Name="Rt"
                                                        IsEnabled="{Binding IsEdit}"
                                                        PreviewKeyUp="CheckForm_PreviewKeyUp"
                                                        PreviewTextInput="NumberValidationTextBox"
                                                        Style="{StaticResource TextBoxInputForm}"
                                                        Text="{Binding FormData.Rt, Mode=TwoWay}"
                                                        Validation.ErrorTemplate="{x:Null}" />
                                                    <TextBlock
                                                        Padding="0"
                                                        DataContext="{Binding ElementName=Rt, Path=Text}"
                                                        Foreground="{StaticResource Gray100}"
                                                        Style="{StaticResource TextBoxPlaceholder}"
                                                        Text="000" />
                                                </Grid>
                                            </StackPanel>
                                            <StackPanel Grid.Column="2">
                                                <TextBlock Style="{StaticResource SmallTitle}" Text="RW" />
                                                <Grid Margin="0,0,15,0">
                                                    <TextBox
                                                        x:Name="Rw"
                                                        IsEnabled="{Binding IsEdit}"
                                                        PreviewKeyUp="CheckForm_PreviewKeyUp"
                                                        PreviewTextInput="NumberValidationTextBox"
                                                        Style="{StaticResource TextBoxInputForm}"
                                                        Text="{Binding FormData.Rw, Mode=TwoWay}"
                                                        Validation.ErrorTemplate="{x:Null}" />
                                                    <TextBlock
                                                        Padding="0"
                                                        DataContext="{Binding ElementName=Rw, Path=Text}"
                                                        Foreground="{StaticResource Gray100}"
                                                        Style="{StaticResource TextBoxPlaceholder}"
                                                        Text="000" />
                                                </Grid>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                    <Grid Margin="0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="15" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="15" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="15" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="15" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="15" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="15" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="15" />
                                            <RowDefinition Height="Auto" />

                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0" Grid.Column="0">
                                            <TextBlock Style="{StaticResource SmallTitle}" Text="No. Handphone" />
                                            <Grid Margin="0,0,15,0">
                                                <TextBox
                                                    x:Name="NoHandphone"
                                                    IsEnabled="{Binding IsEdit}"
                                                    PreviewKeyUp="CheckForm_PreviewKeyUp"
                                                    PreviewTextInput="NumberValidationTextBox"
                                                    Style="{StaticResource TextBoxInputForm}"
                                                    Text="{Binding FormData.NoHp, Mode=TwoWay}"
                                                    Validation.ErrorTemplate="{x:Null}" />
                                                <TextBlock
                                                    Padding="0"
                                                    DataContext="{Binding ElementName=NoHandphone, Path=Text}"
                                                    Foreground="{StaticResource Gray100}"
                                                    Style="{StaticResource TextBoxPlaceholder}"
                                                    Text="" />
                                            </Grid>
                                        </StackPanel>
                                        <StackPanel Grid.Row="0" Grid.Column="1">
                                            <TextBlock Style="{StaticResource SmallTitle}" Text="No. Telepon" />
                                            <Grid Margin="0,0,15,0">
                                                <TextBox
                                                    x:Name="NoTelp"
                                                    IsEnabled="{Binding IsEdit}"
                                                    PreviewKeyUp="CheckForm_PreviewKeyUp"
                                                    PreviewTextInput="NumberValidationTextBox"
                                                    Style="{StaticResource TextBoxInputForm}"
                                                    Text="{Binding FormData.NoTelp, Mode=TwoWay}"
                                                    Validation.ErrorTemplate="{x:Null}" />
                                                <TextBlock
                                                    Padding="0"
                                                    DataContext="{Binding ElementName=NoTelp, Path=Text}"
                                                    Foreground="{StaticResource Gray100}"
                                                    Style="{StaticResource TextBoxPlaceholder}"
                                                    Text="" />
                                            </Grid>
                                        </StackPanel>

                                        <StackPanel Grid.Row="0" Grid.Column="2">
                                            <TextBlock Style="{StaticResource SmallTitle}" Text="Email" />
                                            <Grid Margin="0,0,15,0">
                                                <TextBox
                                                    x:Name="Email"
                                                    IsEnabled="{Binding IsEdit}"
                                                    PreviewKeyUp="CheckForm_PreviewKeyUp"
                                                    Style="{StaticResource TextBoxInputForm}"
                                                    Text="{Binding FormData.Email, Mode=TwoWay}"
                                                    Validation.ErrorTemplate="{x:Null}" />
                                                <TextBlock
                                                    Padding="0"
                                                    DataContext="{Binding ElementName=Email, Path=Text}"
                                                    Foreground="{StaticResource Gray100}"
                                                    Style="{StaticResource TextBoxPlaceholder}"
                                                    Text="" />
                                            </Grid>
                                        </StackPanel>
                                        <StackPanel Grid.Row="2" Grid.Column="0">
                                            <TextBlock Style="{StaticResource SmallTitle}" Text="No. KTP" />
                                            <Grid Margin="0,0,15,0">
                                                <TextBox
                                                    x:Name="NoKtp"
                                                    IsEnabled="{Binding IsEdit}"
                                                    PreviewKeyUp="CheckForm_PreviewKeyUp"
                                                    PreviewTextInput="NumberValidationTextBox"
                                                    Style="{StaticResource TextBoxInputForm}"
                                                    Text="{Binding FormData.NoKtp, Mode=TwoWay}"
                                                    Validation.ErrorTemplate="{x:Null}" />
                                                <TextBlock
                                                    Padding="0"
                                                    DataContext="{Binding ElementName=NoKtp, Path=Text}"
                                                    Foreground="{StaticResource Gray100}"
                                                    Style="{StaticResource TextBoxPlaceholder}"
                                                    Text="" />
                                            </Grid>
                                        </StackPanel>
                                        <StackPanel Grid.Row="2" Grid.Column="1">
                                            <TextBlock Style="{StaticResource SmallTitle}" Text="Kolektif" />
                                            <Grid Margin="0,0,15,0" IsEnabled="{Binding IsEdit}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0">
                                                    <ComboBox
                                                        x:Name="KodeKolektif"
                                                        Margin="0,4,0,0"
                                                        HorizontalAlignment="Stretch"
                                                        Background="White"
                                                        DisplayMemberPath="KodeKolektif"
                                                        ItemsSource="{Binding KolektifList}"
                                                        SelectedValue="{Binding KolektifForm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        SelectionChanged="KodePair_SelectionChanged"
                                                        Style="{StaticResource ComboBoxInputForm}"
                                                        Validation.ErrorTemplate="{x:Null}" />
                                                    <TextBlock
                                                        Padding="5,5,7,0"
                                                        Panel.ZIndex="1"
                                                        DataContext="{Binding ElementName=KodeKolektif, Path=SelectedItem}"
                                                        Foreground="{StaticResource Gray100}"
                                                        Style="{StaticResource ComboBoxSelectOverlay}"
                                                        Text="kode" />
                                                </Grid>
                                                <Grid Grid.Column="2">
                                                    <ComboBox
                                                        x:Name="NamaKolektif"
                                                        Margin="8,4,0,0"
                                                        HorizontalAlignment="Stretch"
                                                        Background="White"
                                                        DisplayMemberPath="NamaKolektif"
                                                        ItemsSource="{Binding KolektifList}"
                                                        SelectedValue="{Binding KolektifForm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        SelectionChanged="KodePair_SelectionChanged"
                                                        Style="{StaticResource ComboBoxInputForm}"
                                                        Validation.ErrorTemplate="{x:Null}" />
                                                    <TextBlock
                                                        Padding="15,5,7,0"
                                                        DataContext="{Binding ElementName=NamaKolektif, Path=SelectedItem}"
                                                        Foreground="{StaticResource Gray100}"
                                                        Style="{StaticResource ComboBoxSelectOverlay}"
                                                        Text="nama" />
                                                </Grid>
                                            </Grid>
                                        </StackPanel>
                                        <StackPanel Grid.Row="2" Grid.Column="2">
                                            <TextBlock Style="{StaticResource SmallTitle}" Text="Keterangan" />
                                            <Grid Margin="0,0,15,0">
                                                <TextBox
                                                    x:Name="Keterangan"
                                                    IsEnabled="{Binding IsEdit}"
                                                    PreviewKeyUp="CheckForm_PreviewKeyUp"
                                                    Style="{StaticResource TextBoxInputForm}"
                                                    Text="{Binding FormData.Keterangan, Mode=TwoWay}"
                                                    Validation.ErrorTemplate="{x:Null}" />
                                                <TextBlock
                                                    Padding="0"
                                                    DataContext="{Binding ElementName=Keterangan, Path=Text}"
                                                    Foreground="{StaticResource Gray100}"
                                                    Style="{StaticResource TextBoxPlaceholder}"
                                                    Text="" />
                                            </Grid>
                                        </StackPanel>

                                        <StackPanel Grid.Row="4" Grid.Column="0">
                                            <TextBlock Style="{StaticResource SmallTitle}" Text="Rayon" />
                                            <Grid Margin="0,0,15,0" IsEnabled="False">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0">
                                                    <ComboBox
                                                        x:Name="KodeRayon"
                                                        Margin="0,4,0,0"
                                                        HorizontalAlignment="Stretch"
                                                        Background="White"
                                                        DisplayMemberPath="KodeRayon"
                                                        ItemsSource="{Binding RayonList}"
                                                        SelectedValue="{Binding RayonForm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        SelectionChanged="KodePair_SelectionChanged"
                                                        Style="{StaticResource ComboBoxInputForm}"
                                                        Validation.ErrorTemplate="{x:Null}" />
                                                    <TextBlock
                                                        Padding="5,5,7,0"
                                                        Panel.ZIndex="1"
                                                        DataContext="{Binding ElementName=KodeRayon, Path=SelectedItem}"
                                                        Foreground="{StaticResource Gray100}"
                                                        Style="{StaticResource ComboBoxSelectOverlay}"
                                                        Text="kode" />
                                                </Grid>
                                                <Grid Grid.Column="2">
                                                    <ComboBox
                                                        x:Name="NamaRayon"
                                                        Margin="8,4,0,0"
                                                        HorizontalAlignment="Stretch"
                                                        Background="White"
                                                        DisplayMemberPath="NamaRayon"
                                                        ItemsSource="{Binding RayonList}"
                                                        SelectedValue="{Binding RayonForm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        SelectionChanged="KodePair_SelectionChanged"
                                                        Style="{StaticResource ComboBoxInputForm}"
                                                        Validation.ErrorTemplate="{x:Null}" />
                                                    <TextBlock
                                                        Padding="15,5,7,0"
                                                        DataContext="{Binding ElementName=NamaRayon, Path=SelectedItem}"
                                                        Foreground="{StaticResource Gray100}"
                                                        Style="{StaticResource ComboBoxSelectOverlay}"
                                                        Text="nama" />
                                                </Grid>
                                            </Grid>
                                        </StackPanel>
                                        <StackPanel Grid.Row="4" Grid.Column="1">
                                            <TextBlock Style="{StaticResource SmallTitle}" Text="Kelurahan" />
                                            <Grid Margin="0,0,15,0" IsEnabled="False">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0">
                                                    <ComboBox
                                                        x:Name="KodeKelurahan"
                                                        Margin="0,4,0,0"
                                                        HorizontalAlignment="Stretch"
                                                        Background="White"
                                                        DisplayMemberPath="KodeKelurahan"
                                                        ItemsSource="{Binding KelurahanList}"
                                                        SelectedValue="{Binding KelurahanForm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        SelectionChanged="KodePair_SelectionChanged"
                                                        Style="{StaticResource ComboBoxInputForm}"
                                                        Validation.ErrorTemplate="{x:Null}" />
                                                    <TextBlock
                                                        Padding="5,5,7,0"
                                                        Panel.ZIndex="1"
                                                        DataContext="{Binding ElementName=KodeKelurahan, Path=SelectedItem}"
                                                        Foreground="{StaticResource Gray100}"
                                                        Style="{StaticResource ComboBoxSelectOverlay}"
                                                        Text="kode" />
                                                </Grid>
                                                <Grid Grid.Column="2">
                                                    <ComboBox
                                                        x:Name="NamaKelurahan"
                                                        Margin="8,4,0,0"
                                                        HorizontalAlignment="Stretch"
                                                        Background="White"
                                                        DisplayMemberPath="NamaKelurahan"
                                                        ItemsSource="{Binding KelurahanList}"
                                                        SelectedValue="{Binding KelurahanForm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        SelectionChanged="KodePair_SelectionChanged"
                                                        Style="{StaticResource ComboBoxInputForm}"
                                                        Validation.ErrorTemplate="{x:Null}" />
                                                    <TextBlock
                                                        Padding="15,5,7,0"
                                                        DataContext="{Binding ElementName=NamaKelurahan, Path=SelectedItem}"
                                                        Foreground="{StaticResource Gray100}"
                                                        Style="{StaticResource ComboBoxSelectOverlay}"
                                                        Text="nama" />
                                                </Grid>
                                            </Grid>
                                        </StackPanel>
                                        <StackPanel Grid.Row="4" Grid.Column="2">
                                            <TextBlock Style="{StaticResource SmallTitle}" Text="Flag" />
                                            <Grid Margin="0,0,15,0" IsEnabled="{Binding IsEdit}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0">
                                                    <ComboBox
                                                        x:Name="IdFlag"
                                                        Margin="0,4,0,0"
                                                        HorizontalAlignment="Stretch"
                                                        Background="White"
                                                        DisplayMemberPath="IdFlag"
                                                        ItemsSource="{Binding FlagList}"
                                                        SelectedValue="{Binding FlagForm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        SelectionChanged="KodePair_SelectionChanged"
                                                        Style="{StaticResource ComboBoxInputForm}"
                                                        Validation.ErrorTemplate="{x:Null}" />
                                                    <TextBlock
                                                        Padding="5,5,7,0"
                                                        Panel.ZIndex="1"
                                                        DataContext="{Binding ElementName=IdFlag, Path=SelectedItem}"
                                                        Foreground="{StaticResource Gray100}"
                                                        Style="{StaticResource ComboBoxSelectOverlay}"
                                                        Text="kode" />
                                                </Grid>
                                                <Grid Grid.Column="2">
                                                    <ComboBox
                                                        x:Name="NamaFlag"
                                                        Margin="8,4,0,0"
                                                        HorizontalAlignment="Stretch"
                                                        Background="White"
                                                        DisplayMemberPath="NamaFlag"
                                                        ItemsSource="{Binding FlagList}"
                                                        SelectedValue="{Binding FlagForm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        SelectionChanged="KodePair_SelectionChanged"
                                                        Style="{StaticResource ComboBoxInputForm}"
                                                        Validation.ErrorTemplate="{x:Null}" />
                                                    <TextBlock
                                                        Padding="15,5,7,0"
                                                        DataContext="{Binding ElementName=NamaFlag, Path=SelectedItem}"
                                                        Foreground="{StaticResource Gray100}"
                                                        Style="{StaticResource ComboBoxSelectOverlay}"
                                                        Text="nama" />
                                                </Grid>
                                            </Grid>
                                        </StackPanel>
                                        <StackPanel Grid.Row="6" Grid.Column="0">
                                            <TextBlock Style="{StaticResource SmallTitle}" Text="Status" />
                                            <Grid Margin="0,0,15,0" IsEnabled="{Binding IsEdit}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0">
                                                    <ComboBox
                                                        x:Name="IdStatus"
                                                        Margin="0,4,0,0"
                                                        HorizontalAlignment="Stretch"
                                                        Background="White"
                                                        DisplayMemberPath="IdStatus"
                                                        ItemsSource="{Binding StatusList}"
                                                        SelectedValue="{Binding StatusForm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        SelectionChanged="KodePair_SelectionChanged"
                                                        Style="{StaticResource ComboBoxInputForm}"
                                                        Validation.ErrorTemplate="{x:Null}" />
                                                    <TextBlock
