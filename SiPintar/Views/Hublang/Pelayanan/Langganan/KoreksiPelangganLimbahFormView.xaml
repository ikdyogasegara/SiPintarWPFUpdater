                                                                Style="{StaticResource BtnWrapper}">
                                                                <md:PackIcon
                                                                    Width="25"
                                                                    Margin="0"
                                                                    Kind="Minus" />
                                                            </Button>
                                                        </StackPanel>
                                                        <Image
                                                            x:Name="CenterMarker"
                                                            Width="30"
                                                            Panel.ZIndex="2"
                                                            Source="/SiPintar;component/Assets/Images/Map/ic_marker_red.png" />
                                                    </Grid>
                                                </Border>
                                            </Grid>

                                            <Border Height="15" />

                                            <StackPanel>
                                                <TextBlock Style="{StaticResource CaptionSmallBody}" Text="Alamat Map" />
                                                <TextBlock
                                                    x:Name="AlamatMap"
                                                    Margin="0,3,0,0"
                                                    Style="{StaticResource SmallTitle}"
                                                    Text="{Binding FormData.AlamatMap, Mode=TwoWay}"
                                                    TextWrapping="Wrap" />
                                                <CheckBox
                                                    Margin="0,20,0,20"
                                                    Content="Atur sebagai alamat utama pelanggan ini"
                                                    IsChecked="{Binding IsAlamatMapFormChecked, Mode=TwoWay}"
                                                    Style="{StaticResource FilterCheckBox}"
                                                    Visibility="{Binding IsEdit, Converter={StaticResource BooleanToVisibleConverter}}" />
                                                <Grid Margin="0,20,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                                        <TextBlock Style="{StaticResource CaptionSmallBody}" Text="Latitude" />
                                                        <TextBlock
                                                            x:Name="LatText"
                                                            Margin="0,3,0,0"
                                                            Style="{StaticResource SmallTitle}"
                                                            Text="{Binding FormData.Latitude, Mode=TwoWay}"
                                                            TextWrapping="Wrap" />
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1" Margin="0,0,0,0">
                                                        <TextBlock Style="{StaticResource CaptionSmallBody}" Text="Longitude" />
                                                        <TextBlock
                                                            x:Name="LonText"
                                                            Margin="0,3,0,0"
                                                            Style="{StaticResource SmallTitle}"
                                                            Text="{Binding FormData.Longitude, Mode=TwoWay}"
                                                            TextWrapping="Wrap" />
                                                    </StackPanel>
                                                </Grid>
                                                <TextBlock
                                                    Margin="0,20,0,0"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="Akurasi" />
                                                <TextBlock
                                                    x:Name="AkurasiText"
                                                    Margin="0,3,0,0"
                                                    Style="{StaticResource SmallTitle}"
                                                    Text="-"
                                                    TextWrapping="Wrap" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </ScrollViewer>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="2" Margin="0,10,16,10">
                        <StackPanel
                            Margin="30,15,0,15"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Grid Visibility="{Binding Path=IsLoadingForm, Converter={StaticResource BooleanToCollapseConverter}}">
                                <Button
                                    Height="28"
                                    Margin="5,0"
                                    md:ButtonAssist.CornerRadius="13"
                                    BorderBrush="{StaticResource PictonBlue}"
                                    Command="{x:Static md:DialogHost.CloseDialogCommand}"
                                    Content="Batal"
                                    FontSize="11"
                                    Foreground="{StaticResource PictonBlue}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}" />
                            </Grid>
                            <Grid Visibility="{Binding IsEdit, Converter={StaticResource BooleanToVisibleConverter}}">
                                <Button
                                    x:Name="OkButton"
                                    md:ButtonAssist.CornerRadius="13"
                                    Click="OkButton_Click"
                                    Content="Simpan"
                                    Style="{StaticResource ButtonPrimarySmall}"
                                    Visibility="{Binding IsLoadingForm, Converter={StaticResource BooleanToCollapseConverter}}" />
                                <Button
                                    md:ButtonAssist.CornerRadius="13"
                                    Background="{StaticResource Gray50}"
                                    IsEnabled="False"
                                    Style="{StaticResource ButtonPrimarySmall}"
                                    Visibility="{Binding IsLoadingForm, Converter={StaticResource BooleanToVisibleConverter}}">
                                    <Viewbox
                                        Width="20"
                                        Height="20"
                                        Stretch="Uniform"
                                        StretchDirection="Both">
                                        <other:SpinnerLoadingView Panel.ZIndex="2" />
                                    </Viewbox>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <md:DialogHost DialogTheme="Inherit" Identifier="SambunganSubDialog" />
        </Grid>
    </md:DialogHost>
</UserControl>
