                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Width="1.5*" Header="HARGA">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock
                                                        HorizontalAlignment="Right"
                                                        Style="{StaticResource TextDataGridCellRegular}"
