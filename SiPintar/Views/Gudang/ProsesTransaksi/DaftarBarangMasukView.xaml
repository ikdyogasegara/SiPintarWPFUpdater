                                            <TextBlock
                                                Margin="10,0,0,0"
                                                DataContext="{Binding ElementName=Periode2, Path=Text}"
                                                Style="{StaticResource TextBoxPlaceholder}"
                                                Text="Pilih bulan periode" />
                                        </Grid>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Row="1" Background="White">
                                    <StackPanel
                                        x:Name="NoTransaksiBorder2"
                                        Margin="16,0,12,13"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <CheckBox
                                            Margin="0,0,0,10"
                                            Content="No. Transaksi"
                                            IsChecked="{Binding IsCheckedNoTransaksi}"
                                            Style="{StaticResource FilterCheckBox}" />
                                        <Grid>
                                            <TextBox
                                                x:Name="NoTransaksi2"
                                                VerticalAlignment="Center"
                                                IsEnabled="{Binding IsCheckedNoTransaksi}"
                                                Style="{StaticResource TextBoxInputForm}"
                                                Text="{Binding NoTransaksiFilter, Mode=TwoWay}" />
                                            <TextBlock
                                                Margin="10,0,0,0"
                                                DataContext="{Binding ElementName=NoTransaksi2, Path=Text}"
                                                Style="{StaticResource TextBoxPlaceholder}"
                                                Text="Masukkan No. Transaksi" />
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </ScrollViewer>
                        <StackPanel
                            Grid.Row="2"
                            Margin="0,1,0,0"
                            VerticalAlignment="Bottom"
                            Background="White">
                            <Button
                                Margin="8,17,8,0"
                                Command="{Binding OnRefreshCommand}"
                                Content="Terapkan Filter"
                                Style="{StaticResource ButtonSecondarySmall}" />
                            <Button
                                Height="30"
                                Margin="8,7"
                                Background="White"
                                Click="ResetFilter_Click"
                                Content="Atur Ulang Filter"
                                FontSize="10"
                                Foreground="{StaticResource SecondaryBlue}"
                                Style="{StaticResource ButtonPlain}" />
