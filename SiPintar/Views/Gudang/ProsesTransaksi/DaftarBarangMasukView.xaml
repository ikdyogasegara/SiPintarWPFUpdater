                                        <Run Text="Saat ini belum ada" />
                                        <LineBreak />
                                        <Run Text="data yang ditampilkan." />
                                        <LineBreak />
                                    </TextBlock>
                                </StackPanel>
                                <Border Height="30" />
                            </StackPanel>
                        </Grid>
                        <ContentControl Content="{StaticResource ProxyElement}" Visibility="Collapsed" />
                        <DataGrid
