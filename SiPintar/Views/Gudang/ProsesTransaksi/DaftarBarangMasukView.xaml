                                        <DataGridTemplateColumn Width="*" Header="JUMLAH">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock
                                                        HorizontalAlignment="Right"
                                                        Style="{StaticResource TextDataGridCellRegular}"
