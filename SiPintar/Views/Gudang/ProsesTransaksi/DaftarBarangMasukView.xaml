                                        Orientation="Vertical">
                                        <CheckBox
                                            Margin="0,0,0,10"
                                            Content="Periode"
                                            IsChecked="{Binding IsCheckedPeriode}"
                                            Style="{StaticResource FilterCheckBox}" />
                                        <Grid>
                                            <ComboBox
                                                x:Name="Periode"
                                                Width="{Binding ElementName=PeriodeBorder, Path=ActualWidth}"
                                                DisplayMemberPath="NamaPeriode"
                                                IsEnabled="{Binding IsCheckedPeriode}"
                                                ItemsSource="{Binding DaftarPeriodeFilter}"
                                                SelectedItem="{Binding SelectedPeriodeFilter, Mode=TwoWay}"
                                                Style="{StaticResource ComboBoxInputForm}" />
                                            <TextBlock
                                                Margin="10,0,0,0"
                                                DataContext="{Binding ElementName=Periode, Path=Text}"
                                                Style="{StaticResource TextBoxPlaceholder}"
                                                Text="Pilih bulan periode" />
                                        </Grid>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Row="1" Background="White">
                                    <StackPanel
                                        x:Name="NoTransaksiBorder"
                                        Margin="16,0,12,13"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <CheckBox
                                            Margin="0,0,0,10"
                                            Content="No. Transaksi"
                                            IsChecked="{Binding IsCheckedNoTransaksi}"
                                            Style="{StaticResource FilterCheckBox}" />
                                        <Grid>
                                            <TextBox
                                                x:Name="NoTransaksi"
                                                VerticalAlignment="Center"
                                                IsEnabled="{Binding IsCheckedNoTransaksi}"
                                                Style="{StaticResource TextBoxInputForm}"
                                                Text="{Binding NoTransaksiFilter, Mode=TwoWay}" />
                                            <TextBlock
                                                Margin="10,0,0,0"
                                                DataContext="{Binding ElementName=NoTransaksi, Path=Text}"
                                                Style="{StaticResource TextBoxPlaceholder}"
                                                Text="Masukkan No. Transaksi" />
                                        </Grid>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Row="2" Background="White">
                                    <StackPanel
                                        x:Name="TanggalTransaksiBorder"
                                        Margin="16,0,12,13"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <CheckBox
                                            Content="Tanggal Transaksi"
                                            IsChecked="{Binding IsCheckedTglTransaksi}"
                                            Style="{StaticResource FilterCheckBox}" />
                                        <Border
                                            Margin="0,10,0,0"
                                            BorderBrush="Gray"
                                            BorderThickness="0.5"
                                            CornerRadius="3"
                                            IsEnabled="{Binding IsCheckedTglTransaksi}">
                                            <Grid>
                                                <DatePicker
                                                    x:Name="TanggalTransasksiAwal"
                                                    Height="30"
                                                    Padding="6,0,0,0"
                                                    BorderThickness="0"
                                                    SelectedDate="{Binding TglTransaksiAwalFilter, Mode=TwoWay}"
                                                    Style="{StaticResource DefaultDatePicker}" />
                                                <TextBlock
                                                    Padding="5,2,7,0"
                                                    Panel.ZIndex="10"
                                                    DataContext="{Binding ElementName=TanggalTransasksiAwal, Path=SelectedDate}"
                                                    Foreground="{StaticResource Gray100}"
                                                    Style="{StaticResource ComboBoxSelectOverlay}"
                                                    Text="Masukkan tanggal mulai" />
                                            </Grid>
                                        </Border>
                                        <Border
                                            Margin="0,5,0,0"
                                            BorderBrush="Gray"
                                            BorderThickness="0.5"
                                            CornerRadius="3"
                                            IsEnabled="{Binding IsCheckedTglTransaksi}">
                                            <Grid>
                                                <DatePicker
                                                    x:Name="TanggalTransasksiAkhir"
                                                    Height="30"
                                                    Padding="6,0,0,0"
                                                    BorderThickness="0"
                                                    SelectedDate="{Binding TglTransaksiAkhirFilter, Mode=TwoWay}"
                                                    Style="{StaticResource DefaultDatePicker}" />
                                                <TextBlock
                                                    Padding="5,2,7,0"
                                                    Panel.ZIndex="10"
                                                    DataContext="{Binding ElementName=TanggalTransasksiAkhir, Path=SelectedDate}"
                                                    Foreground="{StaticResource Gray100}"
                                                    Style="{StaticResource ComboBoxSelectOverlay}"
                                                    Text="Masukkan tanggal akhir" />
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </Border>

                            </Grid>
