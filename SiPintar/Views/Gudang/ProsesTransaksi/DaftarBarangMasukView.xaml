                            </DataGrid.ContextMenu>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E9E9E9" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="1.5*" Header="NO. TRANSAKSI">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Style="{StaticResource TextDataGridCellRegular}"
                                                Text="{Binding NomorTransaksi}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Width="1.5*" Header="TGL MASUK">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Style="{StaticResource TextDataGridCellRegular}"
                                                Text="{Binding WaktuDiterima, StringFormat=dd/MM/yyyy, ConverterCulture='id-ID'}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Width="*" Header="KODE BARANG">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Style="{StaticResource TextDataGridCellRegular}"
                                                Text="{Binding KodeBarang}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Width="2*" Header="NAMA BARANG">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                HorizontalAlignment="Left"
                                                Style="{StaticResource TextDataGridCellRegular}"
                                                Text="{Binding NamaBarang}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Width="1.5*" Header="SATUAN">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Style="{StaticResource TextDataGridCellRegular}"
                                                Text="{Binding SatuanBarang}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Width="*" Header="QTY">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                Style="{StaticResource TextDataGridCellRegular}"
                                                Text="{Binding Qty, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID'}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Width="1.5*" Header="HARGA">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                Style="{StaticResource TextDataGridCellRegular}"
                                                Text="{Binding Harga, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID'}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Width="1.5*" Header="JUMLAH">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                Style="{StaticResource TextDataGridCellRegular}"
                                                Text="{Binding Jumlah, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID'}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </Grid>
            <Grid
                x:Name="FilterSection1"
                Grid.Column="1"
                Margin="0"
                Visibility="Collapsed">
                <Border
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    BorderBrush="{StaticResource Black10}"
                    BorderThickness="1,0,0,0"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
                    <Grid Background="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="65" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel
                            Grid.Row="0"
                            Background="White"
                            Orientation="Horizontal">
                            <Button Click="HideFilter_Click1" Style="{StaticResource BtnWrapper}">
                                <Border
                                    Width="10"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Background="{StaticResource Cerulean}"
                                    BorderBrush="{StaticResource Cerulean}"
                                    BorderThickness="1"
                                    CornerRadius="0 2 2 0">
                                    <Border
                                        Width="4"
                                        Height="7"
                                        Margin="2,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Background="White"
                                        CornerRadius="0 50 50 0" />
                                </Border>
                            </Button>
                            <TextBlock
                                Margin="13,0,0,0"
                                VerticalAlignment="Center"
                                LineHeight="16"
                                Style="{StaticResource Title}"
                                Text="Filter Pencarian" />
                        </StackPanel>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Background="White">
                                    <StackPanel
                                        x:Name="PeriodeBorder"
                                        Margin="16,0,12,13"
