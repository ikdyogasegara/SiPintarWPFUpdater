<UserControl
    x:Class="SiPintar.Views.Billing.Supervisi.RekeningAir.KoreksiRekeningView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:SiPintar.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:glob="clr-namespace:System.Globalization;assembly=mscorlib"
    xmlns:gmaps="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:other="clr-namespace:SiPintar.Views.Global.Other"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SiPintar;component/Assets/ResourceDictionaries/SideNavigationStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BooleanToVisibilityConverter
                x:Key="BooleanToVisibleConverter"
                False="Collapsed"
                True="Visible" />
            <converters:BooleanToVisibilityConverter
                x:Key="BooleanToCollapseConverter"
                False="Visible"
                True="Collapsed" />
            <converters:BooleanToStringConverter
                x:Key="StatusConverter"
                False="Tidak Aktif"
                True="Aktif" />
            <converters:BooleanToBrushConverter
                x:Key="BooleanToBrushConverter"
                FirstBrush="#646464"
                SecondBrush="#646464" />
            <converters:BooleanToBrushConverter
                x:Key="BooleanToBrushConverterActivePage"
                FirstBrush="#028DDB"
                SecondBrush="#646464" />
            <converters:BooleanToBrushConverter
                x:Key="BooleanToBackgroundConverter"
                FirstBrush="#FFFFFF"
                SecondBrush="#FA91A5" />
            <converters:ComparisonToVisibilityConverter x:Key="ComparisonToVisibleConverter" />
            <converters:ComparisonToStrikethroughTextConverter x:Key="ComparisonToStrikethroughTextConverter" />
            <converters:DatetimeToStringConverter x:Key="DatetimeToStringConverter" />
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <converters:InverseBooleanConverter x:Key="InverseBoolean" />
            <converters:StatusPermohonanToBrushConverter x:Key="StatusDataToBrushConverter" />
            <converters:StatusPermohonanToStringConverter x:Key="StatusDataToStringConverter" />
            <converters:StatusPelangganAirToBrushConverter x:Key="StatusPelangganToStringConverter" />
            <converters:StatusPermohonanToBrushConverter x:Key="StatusDataLabelToBrushConverter" isLabel="True" />
            <converters:StatusPermohonanToBrushConverter x:Key="StatusDataBgToBrushConverter" isBackground="True" />
            <converters:StringDefaultValueConverter x:Key="StringDefaultValueConverter" Default="-" />
            <converters:NullVisibilityConverter
                x:Key="NullToCollapseConverter"
                False="Visible"
                True="Collapsed" />
            <converters:NullVisibilityConverter
                x:Key="NullToVisibleConverter"
                False="Collapsed"
                True="Visible" />
        </ResourceDictionary>
    </UserControl.Resources>
    <md:DialogHost DialogTheme="Inherit" Identifier="InnerBillingRootDialog">
        <Grid>
            <Border Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Background="{StaticResource BaseAppBilling}"
                        Orientation="Vertical">
                        <Grid Margin="10,8">
                            <Grid>
                                <TextBlock
                                    x:Name="Title"
                                    Foreground="White"
                                    LineHeight="10"
                                    Style="{StaticResource CaptionFormActive}"
                                    Text="Koreksi Hasil Baca" />
                            </Grid>
                            <StackPanel
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">
                                <Border
                                    Height="16"
                                    Margin="0,0,10,0"
                                    Background="White"
                                    CornerRadius="2">
                                    <TextBlock
                                        Padding="6,1,6,1"
                                        FontSize="10"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource BaseAppBacameter}"
                                        Text="Esc" />
                                </Border>
                                <Button
                                    Width="14"
                                    Height="14"
                                    Margin="0"
                                    Padding="0"
                                    Background="{x:Null}"
                                    Command="{x:Static md:DialogHost.CloseDialogCommand}"
                                    Style="{StaticResource ButtonPlain}">
                                    <md:PackIcon
                                        Margin="0"
                                        Foreground="White"
                                        Kind="Close" />
                                </Button>
                            </StackPanel>

                        </Grid>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        Margin="25,10"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <StackPanel
                            x:Name="PanelStan"
                            Margin="0,0,20,0"
                            Orientation="Vertical">
                            <CheckBox
                                x:Name="CekStanLalu"
                                Margin="0,10,0,0"
                                IsChecked="{Binding IsStanLaluChecked}"
                                Style="{StaticResource MaterialDesignCheckBox}">
                                <TextBlock Style="{StaticResource SmallTitle}" Text="Stan Lalu" />
                            </CheckBox>
                            <TextBox
                                x:Name="StanLalu"
                                Width="200"
                                Height="40"
                                HorizontalAlignment="Left"
                                IsEnabled="{Binding IsStanLaluChecked}"
                                Style="{StaticResource TextBoxInputForm}"
                                TextChanged="StanLalu_TextChanged" />

                            <CheckBox
                                x:Name="CekStanKini"
                                Margin="0,10,0,0"
                                IsChecked="{Binding IsStanKiniChecked}"
                                Style="{StaticResource MaterialDesignCheckBox}">
                                <TextBlock Style="{StaticResource SmallTitle}" Text="Stan Kini" />
                            </CheckBox>
                            <TextBox
                                x:Name="StanSkrg"
                                Width="200"
                                Height="40"
                                HorizontalAlignment="Left"
                                IsEnabled="{Binding IsStanKiniChecked}"
                                Style="{StaticResource TextBoxInputForm}"
                                TextChanged="StanSkrg_TextChanged" />

                            <CheckBox
                                x:Name="CekStanAngkat"
                                Margin="0,10,0,0"
                                IsChecked="{Binding IsStanAngkatChecked}"
                                Style="{StaticResource MaterialDesignCheckBox}">
                                <TextBlock Style="{StaticResource SmallTitle}" Text="Stan Angkat" />
                            </CheckBox>
                            <TextBox
                                x:Name="StanAngkat"
                                Width="200"
                                Height="40"
                                HorizontalAlignment="Left"
                                IsEnabled="{Binding IsStanAngkatChecked}"
                                Style="{StaticResource TextBoxInputForm}"
                                TextChanged="StanAngkat_TextChanged" />

                            <CheckBox
                                x:Name="CekPakai"
                                Margin="0,10,0,0"
                                IsChecked="{Binding IsPakaiChecked}"
                                Style="{StaticResource MaterialDesignCheckBox}">
                                <TextBlock Style="{StaticResource SmallTitle}" Text="Pakai" />
                            </CheckBox>
                            <TextBox
                                x:Name="Pakai"
                                Width="200"
                                Height="40"
                                HorizontalAlignment="Left"
                                IsEnabled="{Binding IsPakaiChecked}"
                                Style="{StaticResource TextBoxInputForm}"
                                TextChanged="Pakai_TextChanged" />
                            <TextBlock
                                x:Name="ValidationPakai"
                                FontSize="12"
                                Foreground="Red"
                                Style="{StaticResource CaptionBody}"
                                Text="Pakai tidak boleh minus !"
                                Visibility="Collapsed" />

                            <CheckBox
                                x:Name="CekKelainan"
                                Margin="0,10,0,0"
                                IsChecked="{Binding IsKelainanChecked}"
                                Style="{StaticResource MaterialDesignCheckBox}">
                                <TextBlock Style="{StaticResource SmallTitle}" Text="Ada Kelainan" />
                            </CheckBox>
                            <ComboBox
                                x:Name="Kelainan"
                                Width="200"
                                HorizontalAlignment="Left"
                                DisplayMemberPath="Kelainan"
                                IsEnabled="{Binding IsKelainanChecked}"
                                ItemsSource="{Binding MasterKelainanList}"
                                SelectedItem="{Binding Path=DataContext.KoreksiSelectedKelainan, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                                SelectedValuePath="Kelainan"
                                Style="{StaticResource ComboBoxInputForm}" />

                            <CheckBox
                                x:Name="CekPetugasBaca"
                                Margin="0,10,0,0"
                                IsChecked="{Binding IsPetugasBacaChecked}"
                                Style="{StaticResource MaterialDesignCheckBox}">
                                <TextBlock Style="{StaticResource SmallTitle}" Text="Petugas Baca Meter" />
                            </CheckBox>
                            <ComboBox
                                x:Name="PetugasBaca"
                                Width="200"
                                HorizontalAlignment="Left"
                                DisplayMemberPath="PetugasBaca"
                                IsEnabled="{Binding IsPetugasBacaChecked}"
                                ItemsSource="{Binding MasterPetugasBacaList}"
                                SelectedItem="{Binding Path=DataContext.KoreksiSelectedPetugasBaca, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                                SelectedValuePath="PetugasBaca"
                                Style="{StaticResource ComboBoxInputForm}" />
                            <Button
                                x:Name="Hitung"
                                Margin="20"
                                Command="{Binding OnOpenKoreksiRekeningCommand}"
                                Visibility="Collapsed">
                                Hitung
                            </Button>

                        </StackPanel>
                        <StackPanel>
                            <StackPanel Margin="0,0,20,0">
                                <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                                    <RadioButton
                                        x:Name="BuktiPembacaan"
                                        Checked="SubMenu_Checked"
                                        Content="Bukti Pembacaan"
                                        FontSize="13"
                                        FontWeight="DemiBold"
                                        GroupName="SubMenu"
                                        Style="{StaticResource NavHorizontalStyle}" />
                                    <RadioButton
                                        x:Name="PerhitunganBiaya"
                                        Checked="SubMenu_Checked"
                                        Content="Perhitungan Biaya"
                                        FontSize="13"
                                        FontWeight="DemiBold"
                                        GroupName="SubMenu"
                                        Style="{StaticResource NavHorizontalStyle}" />
                                    <RadioButton
                                        x:Name="LokasiBaca"
                                        Checked="SubMenu_Checked"
                                        Content="Titik Lokasi Baca"
                                        FontSize="13"
                                        FontWeight="DemiBold"
                                        GroupName="SubMenu"
                                        Style="{StaticResource NavHorizontalStyle}" />
                                </StackPanel>

                            </StackPanel>

                            <Grid
                                x:Name="BuktiPembacaanSection"
                                Margin="0,0,10,0"
                                Panel.ZIndex="2"
                                Visibility="Visible">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="50" />
                                    </Grid.RowDefinitions>

                                    <StackPanel
                                        Grid.Row="0"
                                        Margin="0,0,0,0"
                                        Orientation="Horizontal">
                                        <RadioButton
                                            x:Name="BtnBulanIni"
                                            Checked="BuktiBacaMenu_Checked"
                                            Content="Bulan Ini"
                                            FontSize="13"
                                            FontWeight="DemiBold"
                                            GroupName="SubMenuFoto"
                                            Style="{StaticResource NavHorizontalStyle}" />
                                        <RadioButton
                                            x:Name="BtnBulanLalu"
                                            Checked="BuktiBacaMenu_Checked"
                                            Content="Bulan Lalu"
                                            FontSize="13"
                                            FontWeight="DemiBold"
                                            GroupName="SubMenuFoto"
                                            Style="{StaticResource NavHorizontalStyle}" />
                                        <RadioButton
                                            x:Name="BtnFotoRumah"
                                            Checked="BuktiBacaMenu_Checked"
                                            Content="Rumah"
                                            FontSize="13"
                                            FontWeight="DemiBold"
                                            GroupName="SubMenuFoto"
                                            Style="{StaticResource NavHorizontalStyle}" />
                                        <RadioButton
                                            x:Name="BtnVideo"
                                            Checked="BuktiBacaMenu_Checked"
                                            Content="Video"
                                            FontSize="13"
                                            FontWeight="DemiBold"
                                            GroupName="SubMenuFoto"
                                            Style="{StaticResource NavHorizontalStyle}"
                                            Visibility="Collapsed" />
                                    </StackPanel>

                                    <Border
                                        Grid.Row="1"
                                        Margin="0,10,0,0"
                                        Background="{StaticResource Black10}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="10" />
                                                <ColumnDefinition Width="150" />
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Column="0">
                                                <Grid x:Name="BorderFotoStan" Visibility="Visible">
                                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <Image
                                                            x:Name="FotoStan"
                                                            Height="210"
                                                            Source="/SiPintar;component/Assets/Images/ic_no_pic.png" />
                                                        <TextBlock
                                                            x:Name="InfoFotoStan"
                                                            HorizontalAlignment="Center"
                                                            FontFamily="{StaticResource MontserratMedium}"
                                                            FontSize="14"
                                                            Foreground="{StaticResource SecondaryBlue}">
                                                            Belum ada foto
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Grid>
                                            </Grid>
                                            <Border Grid.Column="1" Background="White" />
                                            <Grid x:Name="InfoBorder" Grid.Column="2">
                                                <Grid Margin="10,10,0,0">
                                                    <StackPanel Orientation="Vertical">
                                                        <StackPanel x:Name="PeriodePanel">
                                                            <TextBlock
                                                                Margin="0,0,0,5"
                                                                Style="{StaticResource CaptionSmallBody}"
                                                                Text="Rekening" />
                                                            <Border
                                                                Height="20"
                                                                Margin="0,0,0,10"
                                                                Padding="5,0"
                                                                HorizontalAlignment="Left"
                                                                Background="#D9FFDF"
                                                                CornerRadius="3">
                                                                <TextBlock
                                                                    x:Name="InfoPeriode"
                                                                    HorizontalAlignment="Left"
                                                                    Foreground="#027E46"
                                                                    Text="12121"
                                                                    TextWrapping="Wrap" />
                                                            </Border>
                                                        </StackPanel>

                                                        <StackPanel x:Name="WaktuBacaPanel">
                                                            <TextBlock
                                                                Margin="0,0,0,5"
                                                                Style="{StaticResource CaptionSmallBody}"
                                                                Text="Waktu Baca" />
                                                            <Border
                                                                Height="20"
                                                                Margin="0,0,0,10"
                                                                Padding="5,0"
                                                                HorizontalAlignment="Left"
                                                                Background="#D9FFDF"
                                                                CornerRadius="3">
                                                                <TextBlock
                                                                    x:Name="InfoWaktuBaca"
                                                                    HorizontalAlignment="Left"
                                                                    Foreground="#027E46"
                                                                    Text="12121"
                                                                    TextWrapping="Wrap" />
                                                            </Border>
                                                        </StackPanel>

                                                        <StackPanel x:Name="PetugasBacaPanel">
                                                            <TextBlock
                                                                Margin="0,0,0,5"
                                                                Style="{StaticResource CaptionSmallBody}"
                                                                Text="Petugas Baca" />
                                                            <Border
                                                                Height="20"
                                                                Margin="0,0,0,10"
                                                                Padding="5,0"
                                                                HorizontalAlignment="Left"
                                                                Background="#D9FFDF"
                                                                CornerRadius="3">
                                                                <TextBlock
                                                                    x:Name="InfoPetugasBaca"
                                                                    HorizontalAlignment="Left"
                                                                    Foreground="#027E46"
                                                                    Text="12121"
                                                                    TextWrapping="Wrap" />
                                                            </Border>
                                                        </StackPanel>

                                                        <StackPanel x:Name="KelainanPanel">
                                                            <TextBlock
                                                                Margin="0,0,0,5"
                                                                Style="{StaticResource CaptionSmallBody}"
                                                                Text="Kelainan" />
                                                            <Border
                                                                Height="20"
                                                                Margin="0,0,0,10"
                                                                Padding="5,0"
                                                                HorizontalAlignment="Left"
                                                                Background="#D9FFDF"
                                                                CornerRadius="3">
                                                                <TextBlock
                                                                    x:Name="InfoKelainan"
                                                                    HorizontalAlignment="Left"
                                                                    Foreground="#027E46"
                                                                    Text="12121"
                                                                    TextWrapping="Wrap" />
                                                            </Border>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Border>

                                    <Grid
                                        Grid.Row="2"
                                        Margin="0,10,0,0"
                                        HorizontalAlignment="Left">
                                        <Button
                                            x:Name="MaxFotoStanButton"
                                            Width="250"
                                            Height="28"
                                            Margin="5,0"
                                            md:ButtonAssist.CornerRadius="13"
                                            BorderBrush="{StaticResource PictonBlue}"
                                            Click="OpenFotoMeter_Click"
                                            Content="Lihat Foto"
                                            FontSize="11"
                                            Foreground="{StaticResource PictonBlue}"
                                            Style="{StaticResource MaterialDesignOutlinedButton}" />
                                    </Grid>

                                </Grid>
                            </Grid>

                            <Grid
                                x:Name="PerhitunganSection"
                                Panel.ZIndex="2"
                                Visibility="Collapsed">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Vertical">
                                    <Border Background="{StaticResource Black20}" CornerRadius="3">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Margin="10,20">
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="Biaya Pakai" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="Administrasi" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="Pemeliharaan" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="Retribusi" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="Pelayanan" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="Air Limbah" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="Denda Pakai 0" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="Adm.Lain" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="Pem.Lain" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="Ret.Lain" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="Ppn" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="Meterai" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="Rekening Air" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="Denda" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="Total" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Margin="10,20">
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    HorizontalAlignment="Right"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="{Binding HitungKoreksi.BiayaPemakaian, StringFormat={}{0:N0}, ConverterCulture='id-ID', Mode=TwoWay}" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    HorizontalAlignment="Right"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="{Binding HitungKoreksi.Administrasi, StringFormat={}{0:N0}, ConverterCulture='id-ID', Mode=TwoWay}" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    HorizontalAlignment="Right"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="{Binding HitungKoreksi.Pemeliharaan, StringFormat={}{0:N0}, ConverterCulture='id-ID', Mode=TwoWay}" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    HorizontalAlignment="Right"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="{Binding HitungKoreksi.Retribusi, StringFormat={}{0:N0}, ConverterCulture='id-ID', Mode=TwoWay}" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    HorizontalAlignment="Right"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="{Binding HitungKoreksi.Pelayanan, StringFormat={}{0:N0}, ConverterCulture='id-ID', Mode=TwoWay}" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    HorizontalAlignment="Right"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="{Binding HitungKoreksi.AirLimbah, StringFormat={}{0:N0}, ConverterCulture='id-ID', Mode=TwoWay}" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    HorizontalAlignment="Right"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="{Binding HitungKoreksi.DendaPakai0, StringFormat={}{0:N0}, ConverterCulture='id-ID', Mode=TwoWay}" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    HorizontalAlignment="Right"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="{Binding HitungKoreksi.AdministrasiLain, StringFormat={}{0:N0}, ConverterCulture='id-ID', Mode=TwoWay}" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    HorizontalAlignment="Right"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="{Binding HitungKoreksi.PemeliharaanLain, StringFormat={}{0:N0}, ConverterCulture='id-ID', Mode=TwoWay}" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    HorizontalAlignment="Right"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="{Binding HitungKoreksi.RetribusiLain, StringFormat={}{0:N0}, ConverterCulture='id-ID', Mode=TwoWay}" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    HorizontalAlignment="Right"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="{Binding HitungKoreksi.Ppn, StringFormat={}{0:N0}, ConverterCulture='id-ID', Mode=TwoWay}" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    HorizontalAlignment="Right"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="{Binding HitungKoreksi.Meterai, StringFormat={}{0:N0}, ConverterCulture='id-ID', Mode=TwoWay}" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    HorizontalAlignment="Right"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="{Binding HitungKoreksi.Rekair, StringFormat={}{0:N0}, ConverterCulture='id-ID', Mode=TwoWay}" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    HorizontalAlignment="Right"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="{Binding HitungKoreksi.Denda, StringFormat={}{0:N0}, ConverterCulture='id-ID', Mode=TwoWay}" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    HorizontalAlignment="Right"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="{Binding HitungKoreksi.Total, StringFormat={}{0:N0}, ConverterCulture='id-ID', Mode=TwoWay}" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                                <StackPanel
                                    Grid.Column="1"
                                    Margin="15,0,0,0"
                                    Orientation="Vertical">
                                    <Border Background="{StaticResource Black20}" CornerRadius="3">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="95" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Margin="10,20">
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Foreground="Black"
                                                    Style="{StaticResource CaptionSmallBody}"
                                                    Text="Pakai" />
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Foreground="Black"
