                        <!--  Info Wilayah Start  -->
                        <Expander Margin="0,25,0,0" Style="{StaticResource ExpanderPlusMinus}">
                            <Expander.Header>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="{StaticResource SecondaryBlue}"
                                    LineHeight="16"
                                    Style="{StaticResource Title}"
                                    Text="Info Wilayah" />
                            </Expander.Header>
                            <StackPanel>
                                <CheckBox
                                    Margin="0,10,0,0"
                                    Content="Wilayah"
                                    IsChecked="{Binding IsWilayahChecked}"
                                    Style="{StaticResource FilterCheckBox}" />
                                <Grid Margin="0,10,0,0" IsEnabled="{Binding IsWilayahChecked}">
                                    <ComboBox
                                        x:Name="Wilayah"
                                        Width="{Binding ElementName=FilterContainer, Path=ActualWidth}"
                                        DisplayMemberPath="NamaWilayah"
                                        ItemsSource="{Binding WilayahList}"
                                        SelectedValue="{Binding WilayahFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource ComboBoxInputForm}"
                                        Validation.ErrorTemplate="{x:Null}" />
                                    <TextBlock
                                        Padding="0"
                                        DataContext="{Binding ElementName=Wilayah, Path=Text}"
                                        Foreground="{StaticResource Gray100}"
                                        Style="{StaticResource TextBoxPlaceholder}"
                                        Text="kode/nama wilayah" />
                                </Grid>

                                <CheckBox
                                    Margin="0,15,0,0"
                                    Content="Kelurahan"
                                    IsChecked="{Binding IsKelurahanChecked}"
                                    Style="{StaticResource FilterCheckBox}" />
                                <Grid Margin="0,10,0,0" IsEnabled="{Binding IsKelurahanChecked}">
                                    <ComboBox
                                        x:Name="Kelurahan"
                                        Width="{Binding ElementName=FilterContainer, Path=ActualWidth}"
                                        DisplayMemberPath="NamaKelurahan"
                                        ItemsSource="{Binding KelurahanList}"
                                        SelectedValue="{Binding KelurahanFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource ComboBoxInputForm}"
                                        Validation.ErrorTemplate="{x:Null}" />
                                    <TextBlock
                                        Padding="0"
                                        DataContext="{Binding ElementName=Kelurahan, Path=Text}"
                                        Foreground="{StaticResource Gray100}"
                                        Style="{StaticResource TextBoxPlaceholder}"
                                        Text="kode/nama kelurahan" />
                                </Grid>

                                <CheckBox
                                    Margin="0,15,0,0"
                                    Content="Rayon"
                                    IsChecked="{Binding IsRayonChecked}"
                                    Style="{StaticResource FilterCheckBox}" />
                                <Grid Margin="0,10,0,0" IsEnabled="{Binding IsRayonChecked}">
                                    <ComboBox
                                        x:Name="Rayon"
                                        Width="{Binding ElementName=FilterContainer, Path=ActualWidth}"
                                        DisplayMemberPath="NamaRayon"
                                        ItemsSource="{Binding RayonList}"
                                        SelectedValue="{Binding RayonFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource ComboBoxInputForm}"
                                        Validation.ErrorTemplate="{x:Null}" />
                                    <TextBlock
                                        Padding="0"
                                        DataContext="{Binding ElementName=Rayon, Path=Text}"
                                        Foreground="{StaticResource Gray100}"
                                        Style="{StaticResource TextBoxPlaceholder}"
                                        Text="kode/nama rayon" />
                                </Grid>

                                <CheckBox
                                    Margin="0,15,0,0"
                                    Content="Cabang"
                                    IsChecked="{Binding IsCabangChecked}"
                                    Style="{StaticResource FilterCheckBox}" />
                                <Grid Margin="0,10,0,0" IsEnabled="{Binding IsCabangChecked}">
                                    <ComboBox
                                        x:Name="Cabang"
                                        Width="{Binding ElementName=FilterContainer, Path=ActualWidth}"
                                        DisplayMemberPath="NamaCabang"
                                        ItemsSource="{Binding CabangList}"
                                        SelectedValue="{Binding CabangFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource ComboBoxInputForm}"
                                        Validation.ErrorTemplate="{x:Null}" />
                                    <TextBlock
                                        Padding="0"
                                        DataContext="{Binding ElementName=Cabang, Path=Text}"
                                        Foreground="{StaticResource Gray100}"
                                        Style="{StaticResource TextBoxPlaceholder}"
                                        Text="kode/nama cabang" />
                                </Grid>
                            </StackPanel>
                        </Expander>
                        <!--  Info Wilayah End  -->
                    </StackPanel>
                </ScrollViewer>
                <StackPanel
                    Grid.Row="3"
                    Margin="0,1,0,0"
                    Background="White">
                    <Button
                        Margin="8,17,8,0"
                        Command="{Binding OnFilterCommand}"
                        Content="Terapkan Filter"
                        Style="{StaticResource ButtonSecondarySmall}" />
                    <Button
                        Height="30"
                        Margin="8,7"
                        Background="White"
                        Command="{Binding OnResetFilterCommand}"
                        Content="Atur Ulang Filter"
                        FontSize="10"
                        Foreground="{StaticResource SecondaryBlue}"
                        Style="{StaticResource ButtonPlain}" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
