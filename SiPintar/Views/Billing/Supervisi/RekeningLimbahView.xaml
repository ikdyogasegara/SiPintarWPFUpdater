                        BorderThickness="1" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource SarabunRegular}"
                        FontSize="11"
                        FontWeight="Regular"
                        Foreground="{StaticResource SecondaryDarker}"
                        Text="Tutup Sementara" />
                    <Border
                        Width="24"
                        Height="12"
