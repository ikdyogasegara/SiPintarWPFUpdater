                                        Padding="0"
                                        DataContext="{Binding ElementName=NoSamb, Path=Text}"
                                        Foreground="{StaticResource Gray100}"
                                        Style="{StaticResource TextBoxPlaceholder}"
                                        Text="Tulis no. sambungan" />
                                </Grid>

                                <CheckBox
                                    Margin="0,15,0,0"
                                    Content="No. Limbah"
