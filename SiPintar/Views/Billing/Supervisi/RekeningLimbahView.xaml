                                    BorderThickness="0.5"
                                    CornerRadius="3"
                                    IsEnabled="{Binding IsTglUploadChecked}">
                                    <Grid>
                                        <DatePicker
                                            x:Name="TglUpload2"
                                            Height="30"
                                            Padding="6,0,0,0"
                                            BorderThickness="0"
                                            PreviewKeyUp="Tgl_PreviewKeyUp"
                                            SelectedDate="{Binding TglUploadAkhirFilter, Mode=TwoWay}"
