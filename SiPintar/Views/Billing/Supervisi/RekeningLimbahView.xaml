                                    <ComboBox
                                        x:Name="Tarif"
                                        Width="{Binding ElementName=FilterContainer, Path=ActualWidth}"
                                        DisplayMemberPath="KodeTarifLimbah"
                                        ItemsSource="{Binding TarifLimbahList}"
                                        SelectedValue="{Binding TarifLimbahFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource ComboBoxInputForm}"
                                        Validation.ErrorTemplate="{x:Null}" />
                                    <TextBlock
                                        Padding="0"
                                        DataContext="{Binding ElementName=Tarif, Path=Text}"
                                        Foreground="{StaticResource Gray100}"
                                        Style="{StaticResource TextBoxPlaceholder}"
                                        Text="Kode/nama Tarif Limbah" />
                                </Grid>

                                <CheckBox
                                    Margin="0,15,0,0"
                                    Content="Kolektif"
                                    IsChecked="{Binding IsKolektifChecked}"
                                    Style="{StaticResource FilterCheckBox}" />
                                <Grid Margin="0,10,0,0" IsEnabled="{Binding IsKolektifChecked}">
                                    <ComboBox
                                        x:Name="Kolektif"
                                        Width="{Binding ElementName=FilterContainer, Path=ActualWidth}"
                                        DisplayMemberPath="NamaKolektif"
                                        ItemsSource="{Binding KolektifList}"
                                        SelectedValue="{Binding KolektifFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource ComboBoxInputForm}"
                                        Validation.ErrorTemplate="{x:Null}" />
                                    <TextBlock
                                        Padding="0"
                                        DataContext="{Binding ElementName=Kolektif, Path=Text}"
