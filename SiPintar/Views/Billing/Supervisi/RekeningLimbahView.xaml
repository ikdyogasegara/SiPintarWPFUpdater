                                            Style="{StaticResource DefaultDatePicker}" />
                                        <TextBlock
                                            Padding="5,2,7,0"
                                            Panel.ZIndex="10"
                                            DataContext="{Binding ElementName=TglPublish1, Path=SelectedDate}"
