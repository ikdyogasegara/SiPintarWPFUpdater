                            <Expander.Header>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="{StaticResource SecondaryBlue}"
                                    LineHeight="16"
                                    Style="{StaticResource Title}"
                                    Text="Kondisi Rekening" />
                            </Expander.Header>
                            <StackPanel>
                                <CheckBox
                                    Margin="0,10,0,0"
                                    Content="Tanggal Bayar"
                                    IsChecked="{Binding IsTglBayarChecked}"
                                    Style="{StaticResource FilterCheckBox}" />
                                <Border
                                    Margin="0,10,0,0"
                                    BorderBrush="Gray"
