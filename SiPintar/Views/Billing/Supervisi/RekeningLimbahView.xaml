                                    BorderBrush="Gray"
                                    BorderThickness="0.5"
                                    CornerRadius="3"
                                    IsEnabled="{Binding IsTglPublishChecked}">
                                    <Grid>
                                        <DatePicker
                                            x:Name="TglPublish1"
