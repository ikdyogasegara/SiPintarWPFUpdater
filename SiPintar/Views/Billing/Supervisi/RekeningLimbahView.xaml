                                    <TextBox
                                        x:Name="NoLimbah"
                                        Style="{StaticResource TextBoxInputForm}"
                                        Text="{Binding PelangganFilter.NomorLimbah, Mode=TwoWay}"
                                        Validation.ErrorTemplate="{x:Null}" />
                                    <TextBlock
                                        Padding="0"
                                        DataContext="{Binding ElementName=NoLimbah, Path=Text}"
                                        Foreground="{StaticResource Gray100}"
                                        Style="{StaticResource TextBoxPlaceholder}"
                                        Text="Tulis no. limbah" />
                                </Grid>

                                <CheckBox
                                    Margin="0,15,0,0"
