<UserControl
    x:Class="SiPintar.Views.Billing.Supervisi.RekeningAirView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:SiPintar.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:other="clr-namespace:SiPintar.Views.Global.Other"
    xmlns:supervisi="clr-namespace:SiPintar.ViewModels.Billing.Supervisi"
    d:DataContext="{d:DesignInstance Type=supervisi:RekeningAirViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SiPintar;component/Assets/ResourceDictionaries/Billing/RekeningAirStyle.xaml" />
                <ResourceDictionary Source="/SiPintar;component/Assets/ResourceDictionaries/SideNavigationStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <XmlDataProvider x:Key="BuktiBacaStan" />
            <FrameworkElement x:Key="ProxyElement" DataContext="{Binding}" />

            <converters:BooleanToVisibilityConverter
                x:Key="BooleanToVisibleConverter"
                False="Collapsed"
                True="Visible" />
            <converters:BooleanToVisibilityConverter
                x:Key="BooleanToCollapseConverter"
                False="Visible"
                True="Collapsed" />
            <converters:NullVisibilityConverter
                x:Key="NullToVisible"
                False="Collapsed"
                True="Visible" />
            <converters:NullVisibilityConverter
                x:Key="NullToCollapsible"
                False="Visible"
                True="Collapsed" />
            <converters:ComparisonToBooleanConverter x:Key="ComparisonToBooleanConverter" />
            <converters:ComparisonToVisibilityConverter x:Key="ComparisonToVisibileConverter" />
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <converters:StringDefaultValueConverter x:Key="StringDefaultValueConverter" Default="-" />
            <converters:StringToBrushConverter
                x:Key="StringToBrushConverter"
                FirstBrush="#C9EFD9"
                FirstString="True"
                SecondBrush="#FFFFFF"
                SecondString="False" />
            <converters:BooleanToBrushConverter
                x:Key="BooleanToBrushConverter"
                FirstBrush="#028DDB"
                SecondBrush="#646464" />

            <ContextMenu x:Key="ExportMenu" Style="{StaticResource ContextMenuRegular}">
                <MenuItem
                    Click="ExportFile_Click"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                    Header="HTML"
                    Style="{StaticResource MenuItemRegular}"
                    Tag="html">
                    <MenuItem.Icon>
                        <md:PackIcon
                            Width="16"
                            Foreground="{StaticResource SecondaryBlue}"
                            Kind="LanguageHtml5" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Click="ExportFile_Click"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                    Header="Excel (*.xls)"
                    Style="{StaticResource MenuItemRegular}"
                    Tag="xls">
                    <MenuItem.Icon>
                        <md:PackIcon
                            Width="16"
                            Foreground="{StaticResource SecondaryBlue}"
                            Kind="FileExcelOutline" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Click="ExportFile_Click"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                    Header="Excel 2007 (*.xlsx)"
                    Style="{StaticResource MenuItemRegular}"
                    Tag="xlsx">
                    <MenuItem.Icon>
                        <md:PackIcon
                            Width="16"
                            Foreground="{StaticResource SecondaryBlue}"
                            Kind="FileExcel" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Click="ExportFile_Click"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                    Header="XML"
                    Style="{StaticResource MenuItemRegular}"
                    Tag="xml">
                    <MenuItem.Icon>
                        <md:PackIcon
                            Width="16"
                            Foreground="{StaticResource SecondaryBlue}"
                            Kind="FileDocumentOutline" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Click="ExportFile_Click"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                    Header="CSV"
                    Style="{StaticResource MenuItemRegular}"
                    Tag="csv">
                    <MenuItem.Icon>
                        <md:PackIcon
                            Width="16"
                            Foreground="{StaticResource SecondaryBlue}"
                            Kind="FileCsvOutline" />
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </ResourceDictionary>

    </UserControl.Resources>

    <Grid Background="#F5F5F5" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition x:Name="FilterWrapper" Width="210" />
        </Grid.ColumnDefinitions>

        <Grid Margin="16,16,0,0" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20,0,10,0" Orientation="Vertical">
                        <StackPanel x:Name="PanelNama" Orientation="Vertical">
                            <Grid>
                                <TextBlock
                                    x:Name="Title"
                                    Margin="0,20,0,0"
                                    Foreground="{StaticResource Black100}"
                                    LineHeight="10"
                                    Style="{StaticResource CaptionFormActive}"
                                    Text="{Binding SelectedData.Nama}"
                                    TextWrapping="Wrap" />
                            </Grid>
                        </StackPanel>

                        <StackPanel x:Name="PanelAlamat" Orientation="Vertical">
                            <Grid>
                                <TextBlock
                                    x:Name="SubTitle"
                                    Margin="0,5,0,0"
                                    FontSize="11"
                                    Foreground="{StaticResource Black50}"
                                    LineHeight="10"
                                    Style="{StaticResource CaptionFormActive}"
                                    Text="{Binding SelectedData.Alamat}"
                                    TextWrapping="Wrap" />
                            </Grid>
                        </StackPanel>

                        <Rectangle
                            Height="0.5"
                            Margin="0,20"
                            HorizontalAlignment="Stretch"
                            Fill="{StaticResource Black20}" />

                        <Expander Style="{StaticResource ExpanderBuktiBacaStan}">
                            <Expander.Header>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    Foreground="{StaticResource SecondaryBlue}"
                                    Style="{StaticResource CaptionFormActive}"
                                    Text="Pembacaan" />
                            </Expander.Header>
                            <Border
                                Padding="10,5,10,5"
                                Background="{StaticResource Black10}"
                                BorderBrush="{StaticResource Black50}"
                                CornerRadius="0, 0, 4, 4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Stan Awal" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Stan Angkat" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Stan Akhir" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Pakai" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Difoto Oleh" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Waktu Baca" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Waktu Koreksi" />
                                    </StackPanel>
                                    <StackPanel
                                        Grid.Column="1"
                                        HorizontalAlignment="Left"
                                        Orientation="Vertical">
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Foreground="Black"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.StanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Foreground="Black"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.StanAngkat, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Foreground="Black"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.StanSkrg, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Foreground="Black"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.Pakai, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Foreground="Black"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.PetugasBaca}"
                                            TextWrapping="Wrap" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Foreground="Black"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.WaktuBaca}"
                                            TextWrapping="Wrap" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Foreground="Black"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.WaktuKoreksi}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Expander>

                        <Rectangle
                            Height="0.5"
                            Margin="0,20"
                            HorizontalAlignment="Stretch"
                            Fill="{StaticResource Black20}" />

                        <Expander Style="{StaticResource ExpanderBuktiBacaStan}">

                            <Expander.Header>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    Foreground="{StaticResource SecondaryBlue}"
                                    Style="{StaticResource CaptionFormActive}"
                                    Text="Riwayat Pemakaian" />
                            </Expander.Header>
                            <Border
                                Padding="10,5,10,5"
                                Background="{StaticResource Black10}"
                                BorderBrush="{StaticResource Black50}"
                                CornerRadius="0, 0, 4, 4">
                                <StackPanel>

                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="40" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            x:Name="Bulan"
                                            Margin="0,5,0,0"
                                            FontWeight="DemiBold"
                                            Foreground="{StaticResource Astronaut}"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Bulan" />
                                        <TextBlock
                                            x:Name="Stan"
                                            Grid.Column="1"
                                            Margin="0,5,0,0"
                                            FontWeight="DemiBold"
                                            Foreground="{StaticResource Astronaut}"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Stan"
                                            TextAlignment="Left" />
                                        <TextBlock
                                            x:Name="Pakai"
                                            Grid.Column="2"
                                            Margin="0,5,0,0"
                                            FontWeight="DemiBold"
                                            Foreground="{StaticResource Astronaut}"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Pakai"
                                            TextAlignment="Left" />
                                        <TextBlock
                                            x:Name="Persen"
                                            Grid.Column="3"
                                            Margin="0,5,0,0"
                                            FontWeight="DemiBold"
                                            Foreground="{StaticResource Astronaut}"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="%"
                                            TextAlignment="Left" />
                                    </Grid>

                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="40" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            x:Name="BulanSkrg"
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding NamaBulan, Converter={StaticResource StringDefaultValueConverter}, ConverterCulture='id-ID', FallbackValue='-'}"
                                            TextWrapping="Wrap" />
                                        <TextBlock
                                            x:Name="StanSkrg"
                                            Grid.Column="1"
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.StanSkrg, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}"
                                            TextAlignment="Left" />
                                        <TextBlock
                                            x:Name="PakaiSkrg"
                                            Grid.Column="2"
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.Pakai, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}"
                                            TextAlignment="Left" />
                                        <TextBlock
                                            x:Name="PersenSkrg"
                                            Grid.Column="3"
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding PersentaseBulanIni, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}"
                                            TextAlignment="Left" />
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="40" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            x:Name="Bulan1"
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding NamaBulanLalu, Converter={StaticResource StringDefaultValueConverter}, ConverterCulture='id-ID', FallbackValue='-'}"
                                            TextWrapping="Wrap" />
                                        <TextBlock
                                            x:Name="Stan1"
                                            Grid.Column="1"
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.StanSkrgBulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}"
                                            TextAlignment="Left" />
                                        <TextBlock
                                            x:Name="Pakai1"
                                            Grid.Column="2"
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.PakaiBulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}"
                                            TextAlignment="Left" />
                                        <TextBlock
                                            x:Name="Persen1"
                                            Grid.Column="3"
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.PersentaseBulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}"
                                            TextAlignment="Left" />
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="40" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            x:Name="Bulan2"
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding Nama2BulanLalu, Converter={StaticResource StringDefaultValueConverter}, ConverterCulture='id-ID', FallbackValue='-'}"
                                            TextWrapping="Wrap" />
                                        <TextBlock
                                            x:Name="Stan2"
                                            Grid.Column="1"
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.StanSkrg2BulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}"
                                            TextAlignment="Left" />
                                        <TextBlock
                                            x:Name="Pakai2"
                                            Grid.Column="2"
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.Pakai2BulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}"
                                            TextAlignment="Left" />
                                        <TextBlock
                                            x:Name="Persen2"
                                            Grid.Column="3"
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.Persentase2BulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}"
                                            TextAlignment="Left" />
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="40" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            x:Name="Bulan3"
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding Nama3BulanLalu, Converter={StaticResource StringDefaultValueConverter}, ConverterCulture='id-ID', FallbackValue='-'}"
                                            TextWrapping="Wrap" />
                                        <TextBlock
                                            x:Name="Stan3"
                                            Grid.Column="1"
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.StanSkrg3BulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}"
                                            TextAlignment="Left" />
                                        <TextBlock
                                            x:Name="Pakai3"
                                            Grid.Column="2"
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.Pakai3BulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}"
                                            TextAlignment="Left" />
                                        <TextBlock
                                            x:Name="Persen3"
                                            Grid.Column="3"
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.Persentase3BulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}"
                                            TextAlignment="Left" />
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="40" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            x:Name="RataRataLabel"
                                            Grid.ColumnSpan="2"
                                            Margin="0,5,0,0"
                                            FontWeight="DemiBold"
                                            Foreground="{StaticResource Astronaut}"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Rata-rata pakai" />
                                        <TextBlock
                                            Grid.Column="2"
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding Ratarata3bulan, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}"
                                            TextAlignment="Left" />
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Expander>

                        <Rectangle
                            Height="0.5"
                            Margin="0,20"
                            HorizontalAlignment="Stretch"
                            Fill="{StaticResource Black20}" />

                        <Expander Style="{StaticResource ExpanderBuktiBacaStan}">
                            <Expander.Header>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    Foreground="{StaticResource SecondaryBlue}"
                                    Style="{StaticResource CaptionFormActive}"
                                    Text="Informasi Rekening" />
                            </Expander.Header>
                            <Border
                                Padding="10,5,10,5"
                                Background="{StaticResource Black10}"
                                BorderBrush="{StaticResource Black50}"
                                CornerRadius="0, 0, 4, 4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="No Samb" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="No Rek" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Status" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Golongan" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Diameter" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Kode Rayon" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Rayon" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Kd Wilayah" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Wilayah" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Kelainan" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Kd Pem Lain" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Kd Ret Lain" />
                                    </StackPanel>
                                    <StackPanel
                                        Grid.Column="1"
                                        HorizontalAlignment="Left"
                                        Orientation="Vertical">
                                        <TextBox
                                            Width="100"
                                            Margin="0,5,0,0"
                                            Background="{StaticResource Black10}"
                                            BorderBrush="Azure"
                                            Foreground="Black"
                                            IsReadOnly="True"
                                            Text="{Binding SelectedData.NoSamb}" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Foreground="Black"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="-" />
                                        <Border
                                            Margin="0,5,0,05"
                                            Padding="10,0"
                                            HorizontalAlignment="Left"
                                            Background="#D9FFDF"
                                            CornerRadius="3">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="#027E46"
                                                Text="{Binding SelectedData.NamaStatus}" />
                                        </Border>
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Foreground="Black"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.KodeGolongan}" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Foreground="Black"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.NamaDiameter}" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Foreground="Black"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.KodeRayon}" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Foreground="Black"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.NamaRayon}" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Foreground="Black"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.KodeWilayah}" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Foreground="Black"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.NamaWilayah}" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Foreground="Black"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="{Binding SelectedData.Kelainan}" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Foreground="Black"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="-" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            Foreground="Black"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="-" />
                                    </StackPanel>

                                </Grid>
                            </Border>

                        </Expander>

                        <Rectangle
                            Height="0.5"
                            Margin="0,20"
                            HorizontalAlignment="Stretch"
                            Fill="{StaticResource Black20}" />

                        <Expander Style="{StaticResource ExpanderBuktiBacaStan}">
                            <Expander.Header>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    Foreground="{StaticResource SecondaryBlue}"
                                    Style="{StaticResource CaptionFormActive}"
                                    Text="Rincian Tagihan" />
                            </Expander.Header>

                            <Border
                                Padding="10,10,10,5"
                                Background="{StaticResource Black10}"
                                BorderBrush="{StaticResource Black50}"
                                CornerRadius="0, 0, 4, 4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="15" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock
                                            Margin="0,0,0,5"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Pakai" />
                                        <TextBlock
                                            Margin="0,0,0,5"
                                            Style="{StaticResource CaptionSmallBody}"
                                            Text="Biaya Pakai" />
