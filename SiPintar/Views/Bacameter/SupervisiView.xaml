<UserControl x:Class="SiPintar.Views.Bacameter.SupervisiView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:converters="clr-namespace:SiPintar.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:gmaps="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
             xmlns:other="clr-namespace:SiPintar.Views.Global.Other"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SiPintar;component/Assets/ResourceDictionaries/Bacameter/SupervisiStyle.xaml" />
                <ResourceDictionary Source="/SiPintar;component/Assets/ResourceDictionaries/Bacameter/BuktiBacaStanStyle.xaml" />
                <ResourceDictionary Source="/SiPintar;component/Assets/ResourceDictionaries/Bacameter/RiwayatPemakaianStyle.xaml" />
                <ResourceDictionary Source="/SiPintar;component/Assets/ResourceDictionaries/Bacameter/PetaLokasiStyle.xaml" />
                <ResourceDictionary Source="/SiPintar;component/Assets/ResourceDictionaries/Bacameter/PerhitunganPemakaianStyle.xaml" />
                <ResourceDictionary Source="/SiPintar;component/Assets/ResourceDictionaries/Bacameter/RincianRekeningStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <FrameworkElement x:Key="ProxyElement" DataContext="{Binding}"/>
            <converters:BooleanToStringConverter x:Key="BooleanToActiveInactiveConverter" True="Aktif" False="Nonaktif"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibleConverter" True="Visible" False="Collapsed" />
            <converters:BooleanToVisibilityConverter x:Key="BooleanToCollapseConverter" True="Collapsed" False="Visible" />
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <converters:ComparisonToVisibilityConverter x:Key="ComparisonToVisibilityConverter" />
            <converters:NullVisibilityConverter x:Key="NullToVisibleConverter" True="Visible" False="Collapsed" />
            <converters:NullVisibilityConverter x:Key="NullToCollapseConverter" True="Collapsed" False="Visible" />
            <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter" FirstBrush="#028DDB" SecondBrush="#646464" />
            <converters:StringDefaultValueConverter x:Key="StringDefaultValueConverter" Default="-" />
            <Style x:Key="IconZoom" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource MontserratMedium}"/>
                <Setter Property="Foreground" Value="{StaticResource Astronaut}" />
                <Setter Property="FontSize" Value="24px" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="Cursor" Value="Hand" />
            </Style>
            <ContextMenu x:Key="ExportMenu" Style="{StaticResource ContextMenuRegular}">
                <MenuItem Header="HTML"
                          Tag="html"
                          Click="ExportFile_Click"
                          CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                          Style="{StaticResource MenuItemRegular}">
                    <MenuItem.Icon>
                        <md:PackIcon Foreground="{StaticResource SecondaryBlue}" Kind="LanguageHtml5" Width="16" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Excel (*.xls)"
                          Tag="xls"
                          Click="ExportFile_Click"
                          CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                          Style="{StaticResource MenuItemRegular}">
                    <MenuItem.Icon>
                        <md:PackIcon Foreground="{StaticResource SecondaryBlue}" Kind="FileExcelOutline" Width="16" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Excel 2007 (*.xlsx)"
                          Tag="xlsx"
                          Click="ExportFile_Click"
                          CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                          Style="{StaticResource MenuItemRegular}">
                    <MenuItem.Icon>
                        <md:PackIcon Foreground="{StaticResource SecondaryBlue}" Kind="FileExcel" Width="16" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="XML"
                          Tag="xml"
                          Click="ExportFile_Click"
                          CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                          Style="{StaticResource MenuItemRegular}">
                    <MenuItem.Icon>
                        <md:PackIcon Foreground="{StaticResource SecondaryBlue}" Kind="FileDocumentOutline" Width="16" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="CSV"
                          Tag="csv"
                          Click="ExportFile_Click"
                          CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                          Style="{StaticResource MenuItemRegular}">
                    <MenuItem.Icon>
                        <md:PackIcon Foreground="{StaticResource SecondaryBlue}" Kind="FileCsvOutline" Width="16" />
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" x:Name="FilterWrapper" />
        </Grid.ColumnDefinitions>

        <Grid Background="White" Margin="0 5 0 0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" >
                <StackPanel Orientation="Vertical" Margin="13 10 10 10">
                    <Grid Margin="0 0 0 5">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="16" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Detail Pelanggan" Style="{StaticResource Title}" />
                            <Button Width="16" Grid.Column="1" Background="Transparent" BorderThickness="0" Style="{StaticResource BtnWrapper}" Click="Print_Click">
                                <StackPanel>
                                    <Image Source="/SiPintar;component/Assets/Images/Toolbar/ic_printer.png" HorizontalAlignment="Right" />
                                </StackPanel>
                            </Button>
                        </Grid>
                    <Grid>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="11" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Nama" Style="{StaticResource CaptionSmallBody}" FontSize="11" FontWeight="DemiBold" Foreground="{StaticResource Astronaut}" />
                                <TextBlock Grid.Column="1" Text=":" Style="{StaticResource CaptionSmallBody}" FontSize="11" />
                                <TextBlock Grid.Column="2" Text="{Binding SelectedData.Nama, FallbackValue='-'}" Style="{StaticResource CaptionSmallBody}" FontSize="11" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="11" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Grid.Row="1" Text="No. Sambung" Style="{StaticResource CaptionSmallBody}" FontSize="11" FontWeight="DemiBold" Foreground="{StaticResource Astronaut}" />
                                <TextBlock Grid.Column="1" Grid.Row="1" Text=":" Style="{StaticResource CaptionSmallBody}" FontSize="11" />
                                <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding SelectedData.NoSamb, FallbackValue='-'}" Style="{StaticResource CaptionSmallBody}" FontSize="11" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="11" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Grid.Row="2" Text="Alamat" Style="{StaticResource CaptionSmallBody}" FontSize="11" FontWeight="DemiBold" Foreground="{StaticResource Astronaut}" />
                                <TextBlock Grid.Column="1" Grid.Row="2" Text=":" Style="{StaticResource CaptionSmallBody}" FontSize="11" />
                                <TextBlock Grid.Column="2" Grid.Row="2" Text="{Binding SelectedData.Alamat, FallbackValue='-'}" Style="{StaticResource CaptionSmallBody}" FontSize="11" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="11" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Grid.Row="3" Text="Kelainan" Style="{StaticResource CaptionSmallBody}" FontSize="11" FontWeight="DemiBold" Foreground="{StaticResource Astronaut}" />
                                <TextBlock Grid.Column="1" Grid.Row="3" Text=":" Style="{StaticResource CaptionSmallBody}" FontSize="11" />
                                <TextBlock Grid.Column="2" Grid.Row="3" Text="{Binding SelectedData.Kelainan, Converter={StaticResource StringDefaultValueConverter}, FallbackValue='-'}" Style="{StaticResource CaptionSmallBody}" FontSize="11" />
                            </Grid>

                        </StackPanel>
                    </Grid>

                    <Expander Style="{StaticResource ExpanderDetailPelanggan}">
                        <Expander.Header>
                            <TextBlock Text="Info Lengkap" VerticalAlignment="Center" FontFamily="{StaticResource MontserratSemiBold}" FontSize="11" />
                        </Expander.Header>

                        <StackPanel>
                            <Grid Margin="0 10 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Golongan" Style="{StaticResource CaptionSmallBody}" FontSize="11" FontWeight="DemiBold" Foreground="{StaticResource Astronaut}" />
                                <TextBlock Grid.Column="1" Text=":" Style="{StaticResource CaptionSmallBody}" FontSize="11" />
                                <TextBlock x:Name="Golongan" Grid.Column="2" Text="{Binding SelectedData.NamaGolongan, FallbackValue='-'}" Style="{StaticResource CaptionSmallBody}" FontSize="11" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource CaptionSmallBody}" FontSize="11" FontWeight="DemiBold" Foreground="{StaticResource Astronaut}">Diameter</TextBlock>
                                <TextBlock Grid.Column="1" Grid.Row="1" Text=":" Style="{StaticResource CaptionSmallBody}" FontSize="11" />
                                <TextBlock x:Name="Ukuran" Grid.Column="2" Grid.Row="1" Text="{Binding SelectedData.NamaDiameter, FallbackValue='-'}" Style="{StaticResource CaptionSmallBody}" FontSize="11" />
                            </Grid>
                        </StackPanel>
                    </Expander>

                    <Border Height="20" />

                    <!-- BUKTI BACA STAN -->
                    <Expander Style="{StaticResource ExpanderBuktiBacaStan}">

                        <Expander.Header>
                            <TextBlock Text="Bukti Hasil Baca" Style="{StaticResource Title}" />
                        </Expander.Header>

                        <Grid Margin="0,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel x:Name="Actions">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <RadioButton GroupName="ProveSection" Style="{StaticResource TextOnlyRadio}" Margin="0 0 10 0" Content="Foto Stan" FontSize="11" x:Name="IsFotoStan" Click="Section_Click" />
                                    <RadioButton Grid.Column="1" GroupName="ProveSection" Style="{StaticResource TextOnlyRadio}" FontSize="11" Margin="0 0 0 0" Content="Foto Rumah" x:Name="IsFotoRumah" Click="Section_Click" />
                                    <RadioButton Grid.Column="2" GroupName="ProveSection" Style="{StaticResource TextOnlyRadio}" Margin="10 0 0 0" FontSize="11" Content="Video" x:Name="IsVideo" Click="Section_Click" />
                                </Grid>

                                <Border Panel.ZIndex="1" Margin="0,4,0,0" CornerRadius="2" Background="{StaticResource BaseGray}" Height="208" Visibility="{Binding IsLoadingBukti, Converter={StaticResource BooleanToVisibleConverter}}">
                                    <Grid>
                                        <Image Height="30" RenderTransformOrigin="0.5, 0.5" Margin="10" Source="/SiPintar;component/Assets/Images/spinner_loading.png">
                                            <Image.RenderTransform>
                                                <RotateTransform x:Name="noFreeze2" />
                                            </Image.RenderTransform>
                                            <Image.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation
                                                                Storyboard.TargetProperty="(Image.RenderTransform).(RotateTransform.Angle)"
                                                                To="360" Duration="0:0:0:1" RepeatBehavior="Forever" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Image.Triggers>
                                        </Image>
                                    </Grid>
                                </Border>

                                <Border Margin="0,4,0,0" CornerRadius="2" Visibility="{Binding IsLoadingBukti, Converter={StaticResource BooleanToCollapseConverter}}">
                                    <Grid>
                                        <Grid x:Name="BorderFotoStan" Background="{StaticResource BaseGray}" Height="208" Visibility="Visible">
                                            <Grid Visibility="{Binding HasFotoStan, Converter={StaticResource BooleanToVisibleConverter}}">
                                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <Image Source="{Binding ThumbnailFotoStan, Mode=OneWay}" Width="208" />
                                                </Grid>
                                                <Button Style="{StaticResource BtnWrapper}" Command="{Binding OnOpenLihatFotoStanCommand}" Width="24" VerticalAlignment="Top" HorizontalAlignment="Right">
                                                    <Image Source="/SiPintar;component/Assets/Images/Action/ic_expand.png" Width="24" />
                                                </Button>
                                            </Grid>
                                            <Grid Visibility="{Binding HasFotoStan, Converter={StaticResource BooleanToCollapseConverter}}">
                                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <Image Source="/SiPintar;component/Assets/Images/ic_no_pic.png" Width="32" />
                                                    <TextBlock x:Name="InfoFotoStan" Margin="0,4,0,0" FontFamily="{StaticResource MontserratMedium}" FontSize="11" Foreground="{StaticResource Gray}">Belum ada foto stan air pelanggan</TextBlock>
                                                </StackPanel>
                                                <Button Style="{StaticResource BtnWrapper}" Width="24" VerticalAlignment="Top" HorizontalAlignment="Right" Command="{Binding OnOpenLihatFotoStanCommand}">
                                                    <Image Source="/SiPintar;component/Assets/Images/Action/ic_expand_disabled.png" Width="24" />
                                                </Button>
                                            </Grid>
                                        </Grid>
                                        <Grid x:Name="BorderFotoRumah" Background="{StaticResource BaseGray}" Height="208" Visibility="Collapsed">
                                            <Grid Visibility="{Binding HasFotoRumah, Converter={StaticResource BooleanToVisibleConverter}}">
                                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <Image Source="{Binding ThumbnailFotoRumah, Mode=OneWay}" Width="208" />
                                                </Grid>
                                                <Button Style="{StaticResource BtnWrapper}" Command="{Binding OnOpenLihatFotoRumahCommand}" Width="24" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Column="1">
                                                    <Image Source="/SiPintar;component/Assets/Images/Action/ic_expand.png" Width="24" />
                                                </Button>
                                            </Grid>
                                            <Grid Visibility="{Binding HasFotoRumah, Converter={StaticResource BooleanToCollapseConverter}}">
                                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <Image Source="/SiPintar;component/Assets/Images/ic_no_pic.png" Width="32" />
                                                    <TextBlock x:Name="InfoFotoRumah" Margin="0,4,0,0" FontFamily="{StaticResource MontserratMedium}" FontSize="11" Foreground="{StaticResource Gray}">Belum ada foto rumah pelanggan</TextBlock>
                                                </StackPanel>
                                                <Button Style="{StaticResource BtnWrapper}" Width="24" VerticalAlignment="Top" HorizontalAlignment="Right" Command="{Binding OnOpenLihatFotoRumahCommand}">
                                                    <Image Source="/SiPintar;component/Assets/Images/Action/ic_expand_disabled.png" Width="24" />
                                                </Button>
                                            </Grid>
                                        </Grid>
                                        <Grid x:Name="BorderVideo" Background="{StaticResource BaseGray}" Height="208" Visibility="Collapsed">
                                            <Grid Visibility="{Binding HasVideo, Converter={StaticResource BooleanToVisibleConverter}}">
                                                <Button Style="{StaticResource BtnWrapper}" Command="{Binding OnOpenLihatVideoCommand}" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <Border Background="Black" Height="208" Width="180">
                                                        <Grid>
                                                            <Image Source="/SiPintar;component/Assets/Images/Action/ic_play.png" Width="64" />
                                                            <Border CornerRadius="50" Background="Gray" Opacity="0.7" Width="60" Height="60" Panel.ZIndex="-1" />
                                                        </Grid>

                                                    </Border>
                                                </Button>
                                                <Button x:Name="MaxVideoButton" Style="{StaticResource BtnWrapper}" Command="{Binding OnOpenLihatVideoCommand}" Width="24" VerticalAlignment="Top" HorizontalAlignment="Right">
                                                    <Image x:Name="MaximizeVideo" Source="/SiPintar;component/Assets/Images/Action/ic_expand.png" Width="24" />
                                                </Button>
                                            </Grid>
                                            <Grid Visibility="{Binding HasVideo, Converter={StaticResource BooleanToCollapseConverter}}">
                                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <Image Source="/SiPintar;component/Assets/Images/ic_no_pic.png" Width="32" />
                                                    <TextBlock x:Name="InfoVideo" Margin="0,4,0,0" FontFamily="{StaticResource MontserratMedium}" FontSize="11" Foreground="{StaticResource Gray}">Belum ada video pelanggan</TextBlock>
                                                </StackPanel>
                                                <Button Style="{StaticResource BtnWrapper}" Width="24" VerticalAlignment="Top" HorizontalAlignment="Right" Command="{Binding OnOpenLihatVideoCommand}">
                                                    <Image Source="/SiPintar;component/Assets/Images/Action/ic_expand_disabled.png" Width="24" />
                                                </Button>
                                            </Grid>
                                        </Grid>
                                    </Grid>

                                </Border>
                            </StackPanel>

                            <Grid Grid.Row="1" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="PrevButton" Click="Prev_Click" Style="{StaticResource BtnWrapper}" Margin="0,8,0,0">
                                    <Image x:Name="PrevIcon" Source="/SiPintar;component/Assets/Images/Action/ic_arrow_left_disabled.png" Margin="0,0,0,0" HorizontalAlignment="Left" />
                                </Button>
                                <TextBlock Grid.Column="1" x:Name="PeriodeDetail" Text="{Binding DetailDataPeriode.NamaPeriode, FallbackValue='-'}" Style="{StaticResource TextBlockBuktiBacaStanBulan}" TextAlignment="Center" />
                                <Button Grid.Column="2" x:Name="NextButton" Click="Next_Click" Style="{StaticResource BtnWrapper}" Margin="0,8,0,0">
                                    <Image x:Name="NextIcon" Source="/SiPintar;component/Assets/Images/Action/ic_arrow_right_disabled.png" Margin="0,0,0,0" HorizontalAlignment="Right"/>
                                </Button>
                            </Grid>

                            <StackPanel Grid.Row="2" VerticalAlignment="Stretch">
                                <Grid Margin="0 10 0 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="StanAkhirLabel" Text="Stan Awal" FontSize="11" Style="{StaticResource CaptionSmallBody}" FontWeight="DemiBold" Foreground="{StaticResource Astronaut}" />
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <TextBlock Text="{Binding SelectedData.StanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" Visibility="{Binding DetailBulanIndex, Converter={StaticResource ComparisonToVisibilityConverter}, ConverterParameter='0'}" FontSize="11" Style="{StaticResource CaptionSmallBody}" />
                                        <TextBlock Text="{Binding DetailData.Riwayat.StanSkrgBulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" Visibility="{Binding DetailBulanIndex, Converter={StaticResource ComparisonToVisibilityConverter}, ConverterParameter='1'}" FontSize="11" Style="{StaticResource CaptionSmallBody}" />
                                        <TextBlock Text="{Binding DetailData.Riwayat.StanSkrg2BulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" Visibility="{Binding DetailBulanIndex, Converter={StaticResource ComparisonToVisibilityConverter}, ConverterParameter='2'}" FontSize="11" Style="{StaticResource CaptionSmallBody}" />
                                        <TextBlock Text="{Binding DetailData.Riwayat.StanSkrg3BulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" Visibility="{Binding DetailBulanIndex, Converter={StaticResource ComparisonToVisibilityConverter}, ConverterParameter='3'}" FontSize="11" Style="{StaticResource CaptionSmallBody}" />
                                        <TextBlock FontSize="11" Style="{StaticResource CaptionSmallBody}" Margin="3 0 0 0">
                                            m<Run Typography.Variants="Superscript">3</Run>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="StanAngkatLabel" FontSize="11" Text="Stan Angkat" Style="{StaticResource CaptionSmallBody}" FontWeight="DemiBold" Foreground="{StaticResource Astronaut}" />
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <TextBlock Text="{Binding SelectedData.StanAngkat, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" Visibility="{Binding DetailBulanIndex, Converter={StaticResource ComparisonToVisibilityConverter}, ConverterParameter='0'}" FontSize="11" Style="{StaticResource CaptionSmallBody}" />
                                        <TextBlock Text="{Binding DetailData.Riwayat.StanLaluBulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" Visibility="{Binding DetailBulanIndex, Converter={StaticResource ComparisonToVisibilityConverter}, ConverterParameter='1'}" FontSize="11" Style="{StaticResource CaptionSmallBody}" />
                                        <TextBlock Text="{Binding DetailData.Riwayat.StanLalu2BulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" Visibility="{Binding DetailBulanIndex, Converter={StaticResource ComparisonToVisibilityConverter}, ConverterParameter='2'}" FontSize="11" Style="{StaticResource CaptionSmallBody}" />
                                        <TextBlock Text="{Binding DetailData.Riwayat.StanLalu3BulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" Visibility="{Binding DetailBulanIndex, Converter={StaticResource ComparisonToVisibilityConverter}, ConverterParameter='3'}" FontSize="11" Style="{StaticResource CaptionSmallBody}" />
                                        <TextBlock FontSize="11" Style="{StaticResource CaptionSmallBody}" Margin="3 0 0 0">
                                            m<Run Typography.Variants="Superscript">3</Run>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="StanAwalLabel" FontSize="11" Text="Stan Akhir" Style="{StaticResource CaptionSmallBody}" FontWeight="DemiBold" Foreground="{StaticResource Astronaut}" />
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <TextBlock Text="{Binding SelectedData.StanSkrg, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" Visibility="{Binding DetailBulanIndex, Converter={StaticResource ComparisonToVisibilityConverter}, ConverterParameter='0'}" FontSize="11" Style="{StaticResource CaptionSmallBody}" />
                                        <TextBlock Text="{Binding DetailData.Riwayat.StanLaluBulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" Visibility="{Binding DetailBulanIndex, Converter={StaticResource ComparisonToVisibilityConverter}, ConverterParameter='1'}" FontSize="11" Style="{StaticResource CaptionSmallBody}" />
                                        <TextBlock Text="{Binding DetailData.Riwayat.StanLalu2BulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" Visibility="{Binding DetailBulanIndex, Converter={StaticResource ComparisonToVisibilityConverter}, ConverterParameter='2'}" FontSize="11" Style="{StaticResource CaptionSmallBody}" />
                                        <TextBlock Text="{Binding DetailData.Riwayat.StanLalu3BulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" Visibility="{Binding DetailBulanIndex, Converter={StaticResource ComparisonToVisibilityConverter}, ConverterParameter='3'}" FontSize="11" Style="{StaticResource CaptionSmallBody}" />
                                        <TextBlock FontSize="11" Style="{StaticResource CaptionSmallBody}" Margin="3 0 0 0">
                                            m<Run Typography.Variants="Superscript">3</Run>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="PakaiLabel" FontSize="11" Text="Pakai" Style="{StaticResource CaptionSmallBody}" FontWeight="DemiBold" Foreground="{StaticResource Astronaut}" />
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <TextBlock Text="{Binding SelectedData.Pakai, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" Visibility="{Binding DetailBulanIndex, Converter={StaticResource ComparisonToVisibilityConverter}, ConverterParameter='0'}" FontSize="11" Style="{StaticResource CaptionSmallBody}" />
                                        <TextBlock Text="{Binding DetailData.Riwayat.StanLaluBulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" Visibility="{Binding DetailBulanIndex, Converter={StaticResource ComparisonToVisibilityConverter}, ConverterParameter='1'}" FontSize="11" Style="{StaticResource CaptionSmallBody}" />
                                        <TextBlock Text="{Binding DetailData.Riwayat.StanLalu2BulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" Visibility="{Binding DetailBulanIndex, Converter={StaticResource ComparisonToVisibilityConverter}, ConverterParameter='2'}" FontSize="11" Style="{StaticResource CaptionSmallBody}" />
                                        <TextBlock Text="{Binding DetailData.Riwayat.StanLalu3BulanLalu, StringFormat='{}{0:#,0.###}', ConverterCulture='id-ID', FallbackValue='-'}" Visibility="{Binding DetailBulanIndex, Converter={StaticResource ComparisonToVisibilityConverter}, ConverterParameter='3'}" FontSize="11" Style="{StaticResource CaptionSmallBody}" />
                                        <TextBlock FontSize="11" Style="{StaticResource CaptionSmallBody}" Margin="3 0 0 0">
                                            m<Run Typography.Variants="Superscript">3</Run>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
