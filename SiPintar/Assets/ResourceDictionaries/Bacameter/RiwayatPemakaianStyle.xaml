        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="Margin" Value="0,8,0,0" />
        <Setter Property="FontFamily" Value="{StaticResource MontserratSemiBold}"/>
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Foreground" Value="{StaticResource Gray}" />
    </Style>

    <Style x:Key="TextBlockRiwayatPemakaianLabelRight" TargetType="TextBlock">
        <Setter Property="TextAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,8,0,0" />
        <Setter Property="FontFamily" Value="{StaticResource MontserratSemiBold}"/>
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Foreground" Value="{StaticResource Gray}" />
    </Style>

    <Style x:Key="TextBlockRiwayatPemakaianValueLeft" TargetType="TextBlock">
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="Margin" Value="0,3,0,5" />
        <Setter Property="FontFamily" Value="{StaticResource SarabunRegular}"/>
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Foreground" Value="{StaticResource Astronaut}" />
    </Style>

    <Style x:Key="TextBlockRiwayatPemakaianValueRight" TargetType="TextBlock">
        <Setter Property="TextAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,3,0,5" />
        <Setter Property="FontFamily" Value="{StaticResource SarabunRegular}"/>
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Foreground" Value="{StaticResource Astronaut}" />
    </Style>

    <Style x:Key="TextBlockRiwayatPemakaianRataRataLabel" TargetType="TextBlock">
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="Margin" Value="0,3,0,0" />
